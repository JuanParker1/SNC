    @using (Html.BeginForm("Manage", "AccessPolicy", FormMethod.Post, new { id = "AccessPolicyForm" }))
    {
        <div class="row">
            <div class="col-md-12">
                <div class="card mb-3">
                    <div class="card-body">
                        <div class="table-responsive">
                            <table class="table table-striped table-hover table-borderless table-hover" id="accesspolicy-list">
                                <thead>
                                    <tr>
                                        <th>No.</th>
                                        <th>Module Name</th>
                                        <th>Page Name</th>
                                        <th>Action</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model.ManageList)
                                    {
                                        <tr>
                                            <td></td>
                                            <td class="td"><input type="hidden" value="@item.PageCode @item.PageName" class="txt">@item.PageName.Split('_')[0]</td>
                                            <td>@item.PageName.Split('_')[1]</td>
                                            @if (item.IsAccess == true)
                                            {
                                                <td><input id="Access" type="checkbox" class="form-control Access" name="Access" checked /></td>
                                            }
                                            else
                                            {
                                                <td><input id="Access" type="checkbox" class="form-control Access" name="Access" /></td>
                                            }
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                        <div class="form-group mt-3 row">
                            <div class="col-md-4 mx-auto">
                                <button type="button" class="btn btn-block btn-success d-none Save"><span class="glyphicon glyphicon-file"></span> Save & Update</button>
                            </div>
                        </div>
                    </div>
                </div>

            </div>
        </div>
    }
</div>


@section Scripts
{
    <!--Select2-->
    <script src="~/Scripts/select2/js/select2.js"></script>
    <link href="~/Scripts/select2/css/select2.css" rel="stylesheet" />
    <link href="~/Content/select2/select2.custom.css" rel="stylesheet" />
    <!--Select2 End-->
    <script src="~/Scripts/sweetalert/sweetalert.min.js"></script>
    <link href="~/Content/sweetalert/sweetalert.css" rel="stylesheet" />
    <script>
        $(document).ready(function () {
            var count = $('#accesspolicy-list tr').length;
            if (count == 1) {
                $(".Save").addClass("d-none");
            } else {
                $(".Save").removeClass("d-none");
            }
            var t = $('#accesspolicy-list').DataTable({
                "dom": "<'row'<'col-sm-6'f>>" +
                    "<'row'<'col-sm-5'i><'col-sm-3'l><'col-sm-4'p>>" +
                    "<'row'<'col-sm-12'tr>>",
                "bPaginate": false,
                "paging": true,
                "lengthMenu": [[10, 20, 50, 100, -1], [10, 20, 50, 100, "ALL"]],
                "pageLength": -1,
                initComplete: function (settings, json) {
                    $('.index input').remove();
                    $('.action-btn input').remove();
                    $('.dataTables_filter input').appendTo('.data-search');
                    $('.dataTables_filter label').remove();
                    $('.data-search input').attr('placeholder', 'Quick Search');
                    $('.data-search input').addClass('form-control');
                    $('.data-search input').removeClass('form-control-sm');
                },
            });

            t.on('order.dt search.dt', function () {
                t.column(0, { search: 'applied', order: 'applied' }).nodes().each(function (cell, i) {
                    cell.innerHTML = i + 1;
                });
            }).draw();

            $('#ShopCode').select2({
                placeholder: "Search Shop",
                ajax: {
                    url: "/AccessPolicy/GetShopSelect2",
                    width: '100%',
                    delay: 250,
                    dataType: 'json'
                }
            }).on('select2:select', function (e) {
                $('input[name="ShopName"]').val(e.params.data.text);
                $("#StaffCode").select2({
                    placeholder: "Search Staff",
                    ajax: {
                        url: "/AccessPolicy/GetStaffSelect2?shopcode=" + e.params.data.id,
                        width: "100%",
                        delay: 250,
                        dataType: 'json'
                    }
                }).on("select2:select", function (e) {
                    //var shopcode = $("#ShopCode").val();
                    $('input[name="StaffName"]').val(e.params.data.text);
                    //window.location.href = "/AccessPolicy/Manage/?staffcode=" + e.params.data.id + "&shopcode=" + shopcode;
                });
            });
            $("#btnFilter").click(function () {
                var shopcode = $("#ShopCode").val();
                var staffcode = $("#StaffCode").val();
                if (shopcode == null || shopcode == "") {
                    swal("Notice!", "Please Select Shop Name and Staff Name!", "warning");
                } else {
                    if (staffcode == null || staffcode == "") {
                        swal("Notice!", "Please Select Staff Name!", "warning");
                    }
                    else {
                        window.location.href = "/AccessPolicy/Manage/?staffcode=" + staffcode + "&shopcode=" + shopcode;
                    }
                }
            });
            $(".Save").click(function () {
                var shopcode = $("#ShopCode").val();
                var staffcode = $("#StaffCode").val();
                if (shopcode != null && staffcode != null) {
                    $('#AccessPolicyForm').submit();
                } else {
                    swal("Notice!", "Please Select Shop Name and Staff Name!", "warning");
                }
            });

            $(document).on('change', 'input[type="checkbox"]', function (e) {
                var $row = $(this).closest("tr").find(".td");
                var $txtValue = $row.find(".txt").val();
                var geek = $txtValue.split(' ');
                var shopcode = $("#ShopCode").val();
                var staffcode = $("#StaffCode").val();
                var shopname = $("#ShopName").val();
                var staffname = $("#StaffName").val();
                if ($(this).is(":checked")) {
                    var PageCode = geek[0];
                    var PageName = geek[1];
                    var IsAccess = true;
                    $.getJSON("/AccessPolicy/AddSession/", {
                        PageCode: PageCode, PageName: PageName, IsAccess: IsAccess,
                        ShopCode: shopcode, StaffCode: staffcode, ShopName: shopname, StaffName: staffname
                    }, function (data) {
                    });
                }
                else {
                    var PageCode = geek[0];
                    var PageName = geek[1];
                    var IsAccess = false;
                    $.getJSON("/AccessPolicy/RemoveSession/", {
                        PageCode: PageCode, PageName: PageName, IsAccess: IsAccess,
                        ShopCode: shopcode, StaffCode: staffcode, ShopName: shopname, StaffName: staffname
                    }, function (data) {
                    });
                }
            });

        });
    </script>
}