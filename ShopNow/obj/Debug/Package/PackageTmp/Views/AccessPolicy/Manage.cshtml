                }
            </select>
            <input type="hidden" name="StaffName" id="StaffName" value="@Model.StaffName" />
        </div>
        <div class="col">
            <button type="button" class="btn btn-sm btn-info" id="btnFilter">Apply Filter</button>        
        </div>
        <div class="col text-right">
            <a href="~/AccessPolicy/List" target="_blank" class="text-theme_light"><span class="fa fa-user mr-2"></span>Single User Access</a>
        </div>
    </div>


