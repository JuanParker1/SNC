columns.Add(s => s.Name).Titled("SubCategory Name").Filterable(true).SetWidth(10);
columns.Add(s => s.ProductType).Titled("Item Type").Filterable(true).SetWidth(10);
columns.Add(s => s.Adscore).Titled("Adscore").Filterable(true).SetWidth(10);
    columns.Add()
    .Encoded(false)
    .Sanitized(false)
