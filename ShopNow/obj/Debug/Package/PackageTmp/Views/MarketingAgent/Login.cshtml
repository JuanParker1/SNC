@model ShopNow.ViewModels.MarketingAgentLoginViewModel
@{
    ViewBag.Title = "Login";
    Layout = null;
}
<title>Marketing Agent Login</title>
<link rel="shortcut icon" href="/Images/ShopNowChat.png" type="image/png">

<script src="~/Scripts/jquery-3.3.1.min.js"></script>
<script src="~/Scripts/bootstrap.min.js"></script>

<link href="~/Content/bootstrap.css" rel="stylesheet" />
<link href="~/fonts/font-awesome/css/font-awesome.min.css" rel="stylesheet" />
<link href="~/Scripts/CustomScript/login.css" rel="stylesheet" />
<style>
    .login_btn {
        background: linear-gradient(to right, #3399ff 0%, #9933ff 100%);
    }

        .login_btn:hover {
            background: linear-gradient(to right, #9933ff 0%, #3399ff 100%);
        }

    .login-card .card-body {
        padding: 65px 60px 60px;
    }
</style>
<body>
    <main class="d-flex align-items-center min-vh-100 py-3 py-md-0">
        <div class="container">
            <div class="card login-card">
                <div class="row no-gutters">
                    <div class="col-md-5">
                        <img src="~/Images/login.jpg" alt="login" class="login-card-img">
                    </div>
                    <div class="col-md-7">
                        <div class="card-body">
                            @using (Html.BeginForm("Login", "MarketingAgent", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
                            {
                                @Html.AntiForgeryToken()
                                <div class="brand-wrapper text-center">
                                    <img src="~/Images/ShopNowChat.png" alt="logo" class="logo">
                                </div>
                                @*<p class="login-card-description">Sign into your account</p>*@
                                <form action="#!">
                                    <div class="form-group">
                                        <label for="email" class="sr-only">Email</label>
                                        <input type="text" name="PhoneNumber" id="PhoneNumber" class="form-control" placeholder="User Name">
                                    </div>
                                    <div class="form-group mb-4">
                                        <label for="password" class="sr-only">Password</label>
                                        <input type="password" name="password" id="password" class="form-control" placeholder="Password">
                                    </div>
                                    <div id="remember" class="checkbox">
                                        <label>
                                            <input type="checkbox" value="remember-me"> Remember me
                                        </label>
                                    </div>
                                    <input name="login" id="login" class="btn btn-block login-btn login_btn mb-4" type="submit" value="Login">
                                </form>
                                <p class="login-card-footer-text">Don't have an account? <a href="~/MarketingAgent/Register" class="text-reset">Register here</a></p>
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </main>
</body>
