@model ShopNow.ViewModels.ShopListViewModel
@{
    ViewBag.Title = "Shop List";
    Layout = "~/Views/MarketingAgent/_Layout.cshtml";
}
<title>Marketing Agent | Shop List</title>


<div class="container-fluid">
    <div class="row">
        <div class="col-md-4">
            <h5 class="mt-1" style="letter-spacing:1px">SHOP LIST</h5>
        </div>
        <div class="col-md-2 col-sm-4 mb-2 data-search">
        </div>
        <div class="col-md-6 text-right">
            <a data-target="self" href="~/MarketingAgent/ShopCreate"><span class="fa fa-plus"></span> New Shop</a>
        </div>
    </div>

    <div class="row">
        <div class="col-md-12">
            <div class="card">
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table table-striped table-hover table-borderless table-hover" id="Shop-list">
                            <thead>
                                <tr>
                                    <th></th>
                                    <th>Name</th>
                                    <th>PhoneNumber</th>
                                    <th class="text-nowrap">District Name</th>
                                    <th class="text-nowrap">Address</th>
                                    <th>Action</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model.List)
                                {
                                <tr>
                                    <td></td>
                                    <td>
                                        <a href="~/Shop/Details?code=@item.Code" class="text-info" target="_blank"> @item.Name</a>
                                    </td>
                                    <td>@item.OwnerPhoneNumber</td>
                                    <td>@item.DistrictName</td>
                                    <td>@item.Address</td>
                                    <td class="text-break">
                                        <a href="~/Shop/Edit?code=@item.Code" class="btn btn-warning text-center text-nowrap btn-sm mb-2" style="padding: 3px 26px">Edit</a>
                                    </td>
                                </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>

        </div>
    </div>
</div>

@section Scripts
{
    <script>
        $(document).ready(function () {
            var t = $('#Shop-list').DataTable({
                "dom": "<'row'<'col-sm-6'f>>" +
                    "<'row'<'col-sm-5'i><'col-sm-3'l><'col-sm-4'p>>" +
                    "<'row'<'col-sm-12'tr>>",
                "bPaginate": false,
                "scrollY": 400,
                "paging": true,
                initComplete: function (settings, json) {
                    $('.index input').remove();
                    $('.action-btn input').remove();
                    $('.dataTables_filter input').appendTo('.data-search');
                    $('.dataTables_filter label').remove();
                    $('.data-search input').attr('placeholder', 'Quick Search');
                    $('.data-search input').addClass('form-control');
                    $('.data-search input').removeClass('form-control-sm');
                },
            });

            t.on('order.dt search.dt', function () {
                t.column(0, { search: 'applied', order: 'applied' }).nodes().each(function (cell, i) {
                    cell.innerHTML = i + 1;
                });
            }).draw();

        });

    </script>

}
