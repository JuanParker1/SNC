@model IEnumerable<ShopNow.Models.MasterProduct>
@using GridMvc.Html
@{
    ViewBag.Title = "FMCG List";
}
<title>ShopNow | FMCG List</title>
<link href="~/Content/Gridmvc.css" rel="stylesheet" />
<script src="~/Scripts/gridmvc.js"></script>

<div class="container-fluid">
    <div class="row">
        <div class="col-md-6">
            <h5 class="text-theme_dark" style="letter-spacing:1px">FMCG LIST</h5>
        </div>
        <div class="col-md-6 text-right">
            <a href="~/MasterProduct/FMCGCreate" target="_self"><span class="fa fa-plus"></span> New FMCG</a>
        </div>
    </div>

    @Html.Grid(Model).Columns(columns =>
{
    columns.Add(c => c.Name).Titled("Name").Filterable(true).SetWidth(20);
    //columns.Add(c => c.CombinationDrugCompound).Titled("Combination").Filterable(true).SetWidth(10);
    columns.Add(c => c.CategoryName).Titled("Category Name").Filterable(true).SetWidth(10);
    columns.Add(c => c.BrandName).Titled("Brand Name").Filterable(true).SetWidth(10);
    columns.Add(c => c.ProductType).Titled("Item Type").SetWidth(5);
    columns.Add()
    .Encoded(false)
    .Sanitized(false)
    .RenderValueAs(o => Html.ActionLink("Edit", "FMCGEdit", new { code = @ShopNow.Helpers.AdminHelpers.ECode(o.Code) }, new { @class = "btn btn-vsm btn-warning mr-1", @style = "padding: 3px 26px" }).ToHtmlString()
                   + Html.ActionLink("Delete", "FMCGDelete", new { code = @ShopNow.Helpers.AdminHelpers.ECode(o.Code) }, new { @class = "btn  btn-vsm btn-danger", @style = "padding: 3px 18px" }).ToHtmlString()).Titled("Action").SetWidth(10);
}).WithPaging(20).Sortable(true)
</div>
