@model ShopNow.ViewModels.MedicalDrugViewModel
@using System.Data;
@{
                /**/

                Layout = "~/Views/Shared/_Layout.cshtml";
}
<title>Shop Now | Master Product Medical Ecxel Upload</title>
<div class="container">
    @using (Html.BeginForm("MedicalIndex", "MasterProduct", null, FormMethod.Post, new { enctype = "multipart/form-data" }))
    {
        @Html.AntiForgeryToken()
        @Html.ValidationSummary()
        <div class="row">
            <div class="col-md-12">
                <h5>Master Product Medical Master Excel Upload</h5>
                <div class="row mt-3">
                    <div class="col-md-6 mb-2">
                        <input type="file" id="dataFile" name="upload" />
                        @if (Model != null)
                        {
                            <input type="hidden" value="save" name="button" class="btn btn-secondary" />
                        }
                        else
                        {
                            <input type="hidden" value="upload" name="button" class="btn btn-success" />
                        }
                    </div>
                    <div class="col-md-6">
                        <input type="submit" value="Upload" class="btn btn-success" />
                    </div>
                </div>
                <div class="row">
                    @if (Model != null)
                    {
                        <div class="col-md-12 my-2"> <hr class="border-success" style="border-top: 1px dashed" /></div>
                        <div class="col-md-5">
                            <p class="text-success">Excel Headers</p>
                            <table id="Product-list">
                                <thead>
                                </thead>
                                <tbody>
                                    @foreach (DataColumn col in Model.DataTable.Columns)
                                    {
                                        <tr>
                                            <td>@col.ColumnName</td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                            <input id="FileName" name="FileName" type="hidden" value="@Model.Filename" />
                            <hr class="border-success" style="border-top: 1px dashed" />
                        </div>
                        <div class="col-md-6">
                            <p class="text-success">Choose Excel Headers</p>
                            <table id="Database-list" class="w-100">
                                <tbody>
                                    <tr>
                                        <td>
                                            <label class="col-md-6">Name</label>
                                            <input id="Name" name="Name" type="text" class="col-md-4" />
                                            <input id="DBName" name="DBName" type="hidden" class="col-md-3" value="Name" />
                                        </td>
                                    </tr>
                                    <tr>
                                        <td>
                                            <label class="col-md-6">Category Name</label>
                                            <input id="CategoryName" name="CategoryName" type="text" class="col-md-4" />
                                            <input id="DBCategoryName" name="DBCategoryName" type="hidden" value="CategoryName" />
                                        </td>
                                    </tr>
                                    <tr>
                                        <td>
                                            <label class="col-md-6">Brand Name</label>
                                            <input id="BrandName" name="BrandName" type="text" class="col-md-4" />
                                            <input id="DBBrandName" name="DBBrandName" type="hidden" value="BrandName" />
                                        </td>
                                    </tr>
                                    <tr>
                                        <td>
                                            <label class="col-md-6">Drug Measurement Unit Code</label>
                                            <input id="DrugMeasurementUnitCode" name="DrugMeasurementUnitCode" type="text" class="col-md-4" />
                                            <input id="DBDrugMeasurementUnitCode" name="DBDrugMeasurementUnitCode" type="hidden" value="DrugMeasurementUnitCode" />
                                        </td>
                                    </tr>
                                    <tr>
                                        <td>
                                            <label class="col-md-6">Drug Measurement Unit Name</label>
                                            <input id="DrugMeasurementUnitName" name="DrugMeasurementUnitName" type="text" class="col-md-4" />
                                            <input id="DBDrugMeasurementUnitName" name="DBDrugMeasurementUnitName" type="hidden" value="DrugMeasurementUnitName" />
                                        </td>
                                    </tr>
                                    <tr>
                                        <td>
                                            <label class="col-md-6">Drug Compound Detail Code</label>
                                            <input id="DrugCompoundDetailCode" name="DrugCompoundDetailCode" type="text" class="col-md-4" />
                                            <input id="DBDrugCompoundDetailCode" name="DBDrugCompoundDetailCode" type="hidden" value="DrugCompoundDetailCode" />
                                        </td>
                                    </tr>
                                    <tr>
                                        <td>
                                            <label class="col-md-6">Combination Drug Compound</label>
                                            <input id="CombinationDrugCompound" name="CombinationDrugCompound" type="text" class="col-md-4" />
                                            <input id="DBCombinationDrugCompound" name="DBCombinationDrugCompound" type="hidden" value="CombinationDrugCompound" />
                                        </td>
                                    </tr>
                                    <tr>
                                        <td>
                                            <label class="col-md-6">Priscription Category </label>
                                            <input id="PriscriptionCategory" name="PriscriptionCategory" type="text" class="col-md-4" />
                                            <input id="DBPriscriptionCategory" name="DBPriscriptionCategory" type="hidden" value="PriscriptionCategory" />
                                        </td>
                                    </tr>
                                    <tr>
                                        <td>
                                            <label class="col-md-6">Origin Country</label>
                                            <input id="OriginCountry" name="OriginCountry" type="text" class="col-md-4" />
                                            <input id="DBOriginCountry" name="DBOriginCountry" type="hidden" value="OriginCountry" />
                                        </td>
                                    </tr>
                                    <tr>
                                        <td>
                                            <label class="col-md-6">Manufacturer</label>
                                            <input id="Manufacturer" name="Manufacturer" type="text" class="col-md-4" />
                                            <input id="DBManufacturer" name="DBManufacturer" type="hidden" value="Manufacturer" />
                                        </td>
                                    </tr>
                                    <tr>
                                        <td>
                                            <label class="col-md-6">iBarU</label>
                                            <input id="iBarU" name="iBarU" type="text" class="col-md-4" />
                                            <input id="DBiBarU" name="DBiBarU" type="hidden" value="iBarU" />
                                        </td>
                                    </tr>
                                    <tr>
                                        <td>
                                            <label class="col-md-6">Weight</label>
                                            <input id="weight" name="weight" type="text" class="col-md-4" />
                                            <input id="DBweight" name="DBweight" type="hidden" value="weight" />
                                        </td>
                                    </tr>
                                    <tr>
                                        <td>
                                            <label class="col-md-6">SizeLB</label>
                                            <input id="SizeLB" name="SizeLB" type="text" class="col-md-4" />
                                            <input id="DBSizeLB" name="DBSizeLB" type="hidden" value="SizeLB" />
                                        </td>
                                    </tr>
                                    <tr>
                                        <td>
                                            <label class="col-md-6">Price</label>
                                            <input id="Price" name="Price" type="text" class="col-md-4" />
                                            <input id="DBPrice" name="DBPrice" type="hidden" value="Price" />
                                        </td>
                                    </tr>
                                    <tr>
                                        <td>
                                            <label class="col-md-6">Product Image1</label>
                                            <input id="ImagePathLarge1" name="ImagePathLarge1" type="text" class="col-md-4" />
                                            <input id="DBImagePathLarge1" name="DBImagePathLarge1" type="hidden" value="ImagePathLarge1" />
                                        </td>
                                    </tr>
                                    <tr>
                                        <td>
                                            <label class="col-md-6">Product Image2</label>
                                            <input id="ImagePathLarge2" name="ImagePathLarge2" type="text" class="col-md-4" />
                                            <input id="DBImagePathLarge2" name="DBImagePathLarge2" type="hidden" value="ImagePathLarge2" />
                                        </td>
                                    </tr>
                                    <tr>
                                        <td>
                                            <label class="col-md-6">Product Image3</label>
                                            <input id="ImagePathLarge3" name="ImagePathLarge3" type="text" class="col-md-4" />
                                            <input id="DBImagePathLarge3" name="DBImagePathLarge3" type="hidden" value="ImagePathLarge3" />
                                        </td>
                                    </tr>
                                    <tr>
                                        <td>
                                            <label class="col-md-6">Product Image4</label>
                                            <input id="ImagePathLarge4" name="ImagePathLarge4" type="text" class="col-md-4" />
                                            <input id="DBImagePathLarge4" name="DBImagePathLarge4" type="hidden" value="ImagePathLarge4" />
                                        </td>
                                    </tr>
                                    <tr>
                                        <td>
                                            <label class="col-md-6">Product Image5</label>
                                            <input id="ImagePathLarge5" name="ImagePathLarge5" type="text" class="col-md-4" />
                                            <input id="DBImagePathLarge5" name="DBImagePathLarge5" type="hidden" value="ImagePathLarge5" />
                                        </td>
                                    </tr>
                                    <tr>
                                        <td>
                                            <label class="col-md-6">Package Name</label>
                                            <input id="PackageName" name="PackageName" type="text" class="col-md-4" />
                                            <input id="DBPackageName" name="DBPackageName" type="hidden" value="PackageName" />
                                        </td>
                                    </tr>
                                    <tr>
                                        <td>
                                            <label class="col-md-6">Item Type</label>
                                            <select id="ProductType" name="ProductType" class="col-md-4">
                                                <option value=" ">Select</option>
                                                <option value="Product">Product</option>
                                                <option value="Dish">Dish</option>
                                                <option value="Service">Service</option>
                                                <option value="Medical">Medical</option>
                                            </select>
                                        </td>
                                    </tr>
                                </tbody>

                            </table>
                            <div class="col-md-10 text-center my-3">
                                <input type="submit" value="submit" class="btn btn-success" />
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    }
</div>
@section Scripts
    {
    <script>
        $(document).ready(function () {

            var tbl = document.getElementById("Product-list");
            if (tbl != null) {
                for (var i = 0; i < tbl.rows.length; i++) {
                    for (var j = 0; j < tbl.rows[i].cells.length; j++)
                        tbl.rows[i].cells[j].onclick = function () { getval(this); };
                }
            }
            function getval(cel) {
                $(function () {
                    $('#Name').on('click', function () {
                        $('#Name').val(cel.innerHTML)
                    });
                    $('#CategoryName').on('click', function () {
                        $('#CategoryName').val(cel.innerHTML)
                    });
                    $('#BrandName').on('click', function () {
                        $('#BrandName').val(cel.innerHTML)
                    });
                    $('#DrugMeasurementUnitCode').on('click', function () {
                        $('#DrugMeasurementUnitCode').val(cel.innerHTML)
                    });
                    $('#DrugMeasurementUnitName').on('click', function () {
                        $('#DrugMeasurementUnitName').val(cel.innerHTML)
                    });
                    $('#DrugCompoundDetailCode').on('click', function () {
                        $('#DrugCompoundDetailCode').val(cel.innerHTML)
                    });
                    $('#CombinationDrugCompound').on('click', function () {
                        $('#CombinationDrugCompound').val(cel.innerHTML)
                    });
                    $('#PriscriptionCategory').on('click', function () {
                        $('#PriscriptionCategory').val(cel.innerHTML)
                    });
                    $('#OriginCountry').on('click', function () {
                        $('#OriginCountry').val(cel.innerHTML)
                    });
                    $('#Manufacturer').on('click', function () {
                        $('#Manufacturer').val(cel.innerHTML)
                    });
                    $('#iBarU').on('click', function () {
                        $('#iBarU').val(cel.innerHTML)
                    });
                    $('#weight').on('click', function () {
                        $('#weight').val(cel.innerHTML)
                    });
                    $('#SizeLB').on('click', function () {
                        $('#SizeLB').val(cel.innerHTML)
                    });
                    $('#Price').on('click', function () {
                        $('#Price').val(cel.innerHTML)
                    });
                    $('#ImagePathLarge1').on('click', function () {
                        $('#ImagePathLarge1').val(cel.innerHTML)
                    });
                    $('#ImagePathLarge2').on('click', function () {
                        $('#ImagePathLarge2').val(cel.innerHTML)
                    });
                    $('#ImagePathLarge3').on('click', function () {
                        $('#ImagePathLarge3').val(cel.innerHTML)
                    });
                    $('#ImagePathLarge4').on('click', function () {
                        $('#ImagePathLarge4').val(cel.innerHTML)
                    });
                    $('#ImagePathLarge5').on('click', function () {
                        $('#ImagePathLarge5').val(cel.innerHTML)
                    });
                    $('#PackageName').on('click', function () {
                        $('#PackageName').val(cel.innerHTML)
                    });
                });
            }

        });
    </script>
}

