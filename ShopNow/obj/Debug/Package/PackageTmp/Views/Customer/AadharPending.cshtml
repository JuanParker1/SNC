
@model ShopNow.ViewModels.CustomerListViewModel
@{
    ViewBag.Title = "Customer Aadhar Pending List";
}
<title>ShopNow | Customer Aadhar Pending List</title>
<div class="container-fluid CustomerMax">
    <div class="row">
        <div class="col-md-4">
            <h5 class="mt-1 text-theme" style="letter-spacing:1px">CUSTOMER AADHAAR PENDING LIST</h5>
        </div>
        <div class="col-md-2 col-sm-4 mb-2 data-search">
        </div>
        <div class="col-md-6 text-right">
            <a href="~/Customer/List" target="_blank"><span class="fa fa-bars"></span> Customer List</a>
        </div>
    </div>
    <div class="row">
        <div class="col-md-12">
            <div class="card">
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table table-striped table-hover table-borderless table-hover" id="Customer-list">
                            <thead>
                                <tr>
                                    <th>No.</th>
                                    <th>Name</th>
                                    <th>Phone Number</th>
                                    <th>Address</th>
                                    <th>District</th>
                                    <th>State</th>
                                    <th>Action</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model.List)
                                {
                                    <tr>
                                        <td></td>
                                        <td><a class="text-theme_light" href="~/Customer/Details?code=@ShopNow.Helpers.AdminHelpers.ECode(item.Code)">@item.Name</a></td>
                                        <td>@item.PhoneNumber</td>
                                        <td class="w-25">@item.Address</td>
                                        <td>@item.DistrictName</td>
                                        <td>@item.StateName</td>
                                        <td class="text-break">
                                            <a href="~/Customer/Edit?code=@ShopNow.Helpers.AdminHelpers.ECode(item.Code)" class="btn btn-warning text-center text-nowrap btn-sm mb-1 mr-2" style="padding: 3px 26px">Edit</a>
                                            <a href="~/Customer/Delete?code=@ShopNow.Helpers.AdminHelpers.ECode(item.Code)" class="btn btn-danger text-center text-nowrap mb-1 btn-sm" style="padding: 3px 18px">Delete</a>
                                        </td>
                                    </tr>
                                }

                            </tbody>
                        </table>
                    </div>
                </div>
            </div>

        </div>
    </div>
</div>


