@model ShopNow.ViewModels.DeliveryBoyListViewModel
@{
    ViewBag.Title = "Delivery Boy List";
    Layout = "~/Views/MarketingAgent/_Layout.cshtml";
}
<title>Marketing Agent | DeliveryBoy List</title>

<div class="container-fluid">
    <div class="row mb-1">
        <div class="col-md-2">
            <h5 style="letter-spacing:1px">DELIVERY BOY LIST</h5>
        </div>
        <div class="col-md-2">
            <div class="mb-1 data-search">
            </div>
        </div>
        <div class="col-md-8 text-right">
            <a href="~/MarketingAgent/DeliveryBoyCreate" target="_self"><span class="fa fa-plus"></span> New Delivery Boy</a>
        </div>
    </div>
    <div class="row">
        <div class="col-md-12">
            <div class="card">
                <div class="card-body">
                    <table class="table table-striped table-hover table-borderless table-hover" id="deliveryboy-list">
                        <thead>
                            <tr>
                                <th>No.</th>
                                <th class="text-nowrap">Name</th>
                                <th class="text-nowrap">Phone Number</th>
                                <th class="text-nowrap">Shop Name</th>
                                <th class="">Image</th>
                                <th>Action</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model.List)
                            {
                                <tr>
                                    <td></td>
                                    <td class="text-nowrap">
                                        <a href="~/DeliveryBoy/Details?code=@item.Code">@item.Name</a>
                                    </td>
                                    <td class="text-nowrap">@item.PhoneNumber</td>
                                    <td class="text-nowrap">@item.ShopName</td>
                                    <td class="text-nowrap">
                                        @if (item.ImagePath != null)
                                        {
                                            <span><a href="~/Home/ImageDenied" data-toggle="modal" data-target="#myModal" title="Click Here To Preview!"><img id='img-upload' src="@item.ImagePath" class="img-thumbnail-StampSize DeliveryBoyImage" style="width:40px; height:40px" onerror="this.src='/Images/No Photo.png'" /></a></span>
                                        }
                                        else
                                        {
                                            <img src="~/Images/No Photo.png" class="img-thumbnail-StampSize" style="width:40px; height:40px" />
                                        }
                                    </td>
                                    <td>
                                        <a href="~/DeliveryBoy/Edit?code=@item.Code" class="btn btn-warning text-center text-nowrap btn-sm" style="padding: 3px 26px">Edit</a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

<div id="myModal" class="modal fade">
    <div class="modal-dialog">
        <span class="close" data-dismiss="modal">&times;</span>
        <a href="~/Home/ImageDenied">
            <img class="modal-content" id="myImage">
        </a>
    </div>
</div>


@section Scripts
{
    <!--Select2-->
    <script src="~/Scripts/select2/js/select2.js"></script>
    <link href="~/Scripts/select2/css/select2.css" rel="stylesheet" />
    <link href="~/Content/select2/select2.custom.css" rel="stylesheet" />
    <!--Select2 End-->
    <script>
        $(document).ready(function () {
            var t = $('#deliveryboy-list').DataTable({
                "dom": "<'row'<'col-sm-6'f>>" +
                    "<'row'<'col-sm-5'i><'col-sm-3'l><'col-sm-4'p>>" +
                    "<'row'<'col-sm-12'tr>>",
                "bPaginate": false,
                "scrollY": 400,
                "paging": true,
                "lengthMenu": [[10, 20, 50, 100, -1], [10, 20, 50, 100, "ALL"]],
                "pageLength": 20,
                initComplete: function (settings, json) {
                    $('.index input').remove();
                    $('.action-btn input').remove();
                    $('.dataTables_filter input').appendTo('.data-search');
                    $('.dataTables_filter label').remove();
                    $('.data-search input').attr('placeholder', 'Quick Search');
                    $('.data-search input').addClass('form-control');
                    $('.data-search input').removeClass('form-control-sm');
                },
            });

            t.on('order.dt search.dt', function () {
                t.column(0, { search: 'applied', order: 'applied' }).nodes().each(function (cell, i) {
                    cell.innerHTML = i + 1;
                });
            }).draw();

            $('#ShopCode').select2({
                placeholder: "Search Shop",
                ajax: {
                    url: "/DeliveryBoy/GetShopSelect2",
                    width: '100%',
                    delay: 250,
                    dataType: 'json'
                }
            }).on('select2:select', function (e) {
                $('input[name="ShopName"]').val(e.params.data.text);
            });

            $("#Filter").click(function () {
                var shopcode = $("#ShopCode").val();
                window.location.href = "/DeliveryBoy/List/?shopcode=" + shopcode;
            });

            var modal = document.getElementById('myModal');
            var img = document.getElementsByClassName('DeliveryBoyImage');
            var modalImg = document.getElementById("myImage");
            $(img).click(function () {
                modal.style.display = "block";
                modalImg.src = this.src;
                if (this.src == "") {
                    $('#myModal').hide();
                }
                else {
                    $('#myModal').modal('show');
                }
            });

        });
    </script>
}
