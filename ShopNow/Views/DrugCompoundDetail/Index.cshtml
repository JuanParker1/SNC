@section Scripts
    {
    <script>
        $(document).ready(function () {

            var tbl = document.getElementById("Brand-list");
            if (tbl != null) {
                for (var i = 0; i < tbl.rows.length; i++) {
                    for (var j = 0; j < tbl.rows[i].cells.length; j++)
                        tbl.rows[i].cells[j].onclick = function () { getval(this); };
                }
            }
            function getval(cel) {
                $(function () {
                    $('#AliasName').on('click', function () {
                        $('#AliasName').val(cel.innerHTML)
                    });
                    $('#InteractingCompounds').on('click', function () {
                        $('#InteractingCompounds').val(cel.innerHTML)
                    });
                    $('#IntakeIndications').on('click', function () {
                        $('#IntakeIndications').val(cel.innerHTML)
                    });
                    $('#IntakeContraindication').on('click', function () {
                        $('#IntakeContraindication').val(cel.innerHTML)
                    });
                    $('#MechanismOfAction').on('click', function () {
                        $('#MechanismOfAction').val(cel.innerHTML)
                    });
                    $('#IndicationTreatmentAgeGroup').on('click', function () {
                        $('#IndicationTreatmentAgeGroup').val(cel.innerHTML)
                    });
                    $('#CompoundUsageReasons').on('click', function () {
                        $('#CompoundUsageReasons').val(cel.innerHTML)
                    });
                    $('#Alcohol').on('click', function () {
                        $('#Alcohol').val(cel.innerHTML)
                    });
                    $('#Pregnancy').on('click', function () {
                        $('#Pregnancy').val(cel.innerHTML)
                    });
                    $('#Breastfeeding').on('click', function () {
                        $('#Breastfeeding').val(cel.innerHTML)
                    });
                    $('#Driving').on('click', function () {
                        $('#Driving').val(cel.innerHTML)
                    });
                });
            }
        });
    </script>
