@model ShopNow.ViewModels.CustomerDetailsViewModel
@{
    ViewBag.Title = "Customer Details";
}
<title>ShopNow | Customer Details</title>
<style>
    #order-div::-webkit-scrollbar {
        width: 5px;
    }

    /* Track */
    #order-div::-webkit-scrollbar-track {
        background: #f1f1f1;
    }

    /* Handle */
    #order-div::-webkit-scrollbar-thumb {
        background: #28a745;
    }

        /* Handle on hover */
        #order-div::-webkit-scrollbar-thumb:hover {
            background: #28a745;
        }
</style>
<div class="container-fluid my-0">
    <div class="row">
        <div class="col-md-6">
            <h5 class="mt-1 text-theme" style="letter-spacing:1px">CUSTOMER DETAILS</h5>
        </div>
        <div class="col-md-6 text-right">
            <a href="~/Customer/List" target="_blank"><span class="fa fa-bars"></span>&nbsp;Customer List</a>
        </div>
    </div>
    <div class="row mt-3">
        <div class="col-md-3">
            <div class="card h-100">
                <div class="card-body">
                    <label class="font-weight-bold text-muted"><u>Profile Details:</u></label>
                    <img src="~/Images/user.jpg" class="rounded-circle my-3 d-block mx-auto img-thumbnail shadow" alt="customerimage" style="width:170px;">
                    <div class="text-center">
                        <h5>@Model.Name</h5>
                        <h5>@Model.PhoneNumber</h5>
                        <p>@(Model.Address != "NULL" ? @Model.Address : "N/A")</p>
                    </div>
                    <div class="border-bottom border-success mb-3"></div>
                    <div class="d-flex">
                        <label class="mr-3">Wallet Amount:</label>
                        <b>₹@Model.WalletAmount</b>
                        <a href="#modal-update-walletamount" data-target="#modal-update-walletamount" data-toggle="modal" class="ml-3"><i class="fa fa-edit"></i></a>
                    </div>
                    <div class="d-flex">
                        <label class="mr-3">Penalty Charge:</label>
                        <b>₹@Model.PenaltyAmount</b>
                    </div>
                    <div class="d-flex">
                        <label class="mr-3">Waiting Charge:</label>
                        <b>₹@Model.DeliveryWaitingCharge</b>
                    </div>
                    <div class="d-flex">
                        <label class="mr-3">Last Purchase Date:</label>
                        <b>@(Model.LastPurchaseDate != null ? Model.LastPurchaseDate.Value.ToString("dd-MMM-yyyy") : "N/A")</b>
                    </div>
                    <div class="d-flex">
                        <label class="mr-3">App Version:</label>
                        <b>@Model.AppVersion</b>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-9">
            <div class="card h-100">
                <div class=" card-body">
                    <label class="font-weight-bold text-muted"><u>Order Details:</u></label>
                    <div class="d-flex justify-content-between">
                        <div>
                            <label class="mr-3">Total Orders:</label>
                            <b class="text-primary h3">@Model.TotalOrderCount</b>
                        </div>
                        <div>
                            <label class="mr-3">Delivered Orders:</label>
                            <b class="text-success h3">@Model.DeliveredOrderCount</b>
                        </div>
                        <div>
                            <label class="mr-3">Cancel Orders:</label>
                            <b class="text-danger h3">@Model.CancelOrderCount</b>
                        </div>
                    </div>
                    <div style="height:500px;overflow:auto;" id="order-div">
                        <table class="table table-striped table-borderless">
                            <thead>
                                <tr>
                                    <th>#</th>
                                    <th>Status</th>
                                    <th>Date</th>
                                    <th>Number</th>
                                    <th>Shop</th>
                                    <th>Product Count</th>
                                    <th>Quantity Count</th>
                                    <th>Total Amount</th>
                                </tr>
                            </thead>
                            <tbody>
                                @if (Model.OrderListItems.Count() == 0)
                                {
                                    <tr>
                                        <td class="bg-light text-center" colspan="8">No Records Found</td>
                                    </tr>
                                }
                                else
                                {
                                    foreach (var item in Model.OrderListItems)
                                    {
                                        var count = Model.OrderListItems.IndexOf(item);
                                        count++;
                                        <tr>
                                            <td>@count</td>
                                            <td><b class="@item.StatusTextColor">@item.StatusText</b></td>
                                            <td>@item.DateEncoded.ToString("dd-MMM-yyyy hh:mm tt")</td>
                                            <td>@item.OrderNumber</td>
                                            <td>@item.ShopName</td>
                                            <td>@item.ProductCount</td>
                                            <td>@item.QuantityCount</td>
                                            <td>₹@item.Amount.ToString("#,##.00")</td>
                                        </tr>
                                    }
                                }
                            </tbody>
                            @if (Model.OrderListItems.Count > 0)
                            {
                                <tfoot>
                                    <tr>
                                        <th colspan="5">Total</th>
                                        <th>@Model.OrderListItems.Sum(i => i.ProductCount)</th>
                                        <th>@Model.OrderListItems.Sum(i => i.QuantityCount)</th>
                                        <th>₹@Model.OrderListItems.Sum(i => i.Amount).ToString("#,##.00")</th>
                                    </tr>
                                </tfoot>
                            }
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<div class="modal fade" id="modal-update-walletamount" tabindex="-1" role="dialog">
    <div class="modal-dialog modal-sm">
        <div class="modal-content">
            <div class="modal-body">
                <input type="hidden" name="Id" id="Id" value="@Model.Id" />
                <h5 class="text-primary text-center">Add Wallet Amount</h5>
                <div class="form-group">
                    <label class="font-weight-bold text-secondary">Amount</label>
                    <input type="number" name="WalletAmount" id="WalletAmount" class="form-control" required />
                </div>
                <div class="form-group">
                    <label class="font-weight-bold text-secondary">Description</label>
                    <textarea class="form-control" name="Description" id="Description" required></textarea>
                    @*<input type="text" name="Description" id="Description" class="form-control" required />*@
                </div>
                <div class="text-right">
                    <button class="btn btn-sm btn-success mr-3" id="btn-AddWallet">Submit</button>
                    <button class="btn btn-sm btn-danger" data-dismiss="modal">Close</button>
                </div>
            </div>
        </div>
    </div>
</div>

<div id="ModalCustomerImg" class="modal fade">
    <div class="modal-dialog">
        <span class="close" data-dismiss="modal">&times;</span>
        <a href="~/Home/ImageDenied">
            <img class="modal-content" id="CustomerImg">
        </a>
    </div>
</div>

<div id="ModalAadharImg" class="modal fade">
    <div class="modal-dialog">
        <span class="close" data-dismiss="modal">&times;</span>
        <a href="~/Home/ImageDenied">
            <img class="modal-content" id="AadharImg">
        </a>
    </div>
</div>

@section Scripts
{
    <script src="~/Scripts/sweetalert/sweetalert.min.js"></script>
    <link href="~/Content/sweetalert/sweetalert.css" rel="stylesheet" />
    <script>
        $(document).ready(function () {
            var modal1 = document.getElementById('ModalCustomerImg');
            var img1 = document.getElementsByClassName('ProfileImg');
            var modalImg1 = document.getElementById("CustomerImg");
            $(img1).click(function () {
                modal1.style.display = "block";
                modalImg1.src = this.src;
                if (this.src == "") {
                    $('#ModalCustomerImg').hide();
                }
                else {
                    $('#ModalCustomerImg').modal('show');
                }
            });

            var modal2 = document.getElementById('ModalAadharImg');
            var img2 = document.getElementsByClassName('AadharImg');
            var modalImg2 = document.getElementById("AadharImg");
            $(img2).click(function () {
                modal2.style.display = "block";
                modalImg2.src = this.src;
                if (this.src == "") {
                    $('#ModalAadharImg').hide();
                }
                else {
                    $('#ModalAadharImg').modal('show');
                }
            });

            $("#btn-AddWallet").click(function () {
                var id = $('#Id').val();
                var walletamount = $('#WalletAmount').val();
                var description = $('#Description').val();
                $.getJSON("/Customer/AddWalletAmount?Id=" + id + "&walletamount=" + walletamount + "&description=" + description, function (data) {
                    if (data.message != null) {
                        swal({
                            title: data.message,
                            text: "",
                            type: "success"
                        }, function () {
                            window.location.reload();
                        });
                    }
                });
            });

        });
    </script>
}


