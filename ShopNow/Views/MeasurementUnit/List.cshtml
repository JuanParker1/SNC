@model IEnumerable<ShopNow.ViewModels.MeasurementUnitListViewModel.UnitList>
@using GridMvc.Html
@{
    ViewBag.Title = "Measurement Unit List";
}
<title>ShopNow | Measurement Unit List</title>
<link href="~/Content/Gridmvc.css" rel="stylesheet" />
<script src="~/Scripts/gridmvc.js"></script>
<div class="container-fluid">
    <div class="row">
        <div class="col-md-6">
            <h5 class="text-success" style="letter-spacing:1px">Measurement Unit List</h5>
        </div>        
        <div class="col-md-6 text-right">
            <a href="~/MeasurementUnit/Create" target="_blank"><span class="fa fa-plus"></span>&nbsp;New Measurement Unit</a>            
        </div>
    </div>
    <div class="row">
        <div class="col-md-12">
            <div class="card mb-3">
                <div class="card-body">
                    @Html.Grid(Model).Columns(columns =>
               {
               columns.Add(b => b.UnitName).Titled("Name").Filterable(true).SetWidth(20);
               columns.Add(b => b.UnitSymbol).Titled("Symbol").Filterable(true).SetWidth(20);
               columns.Add(b => b.UnitType).Titled("Type").Filterable(true).SetWidth(20);
               columns.Add(b => b.ConversionFormula).Titled("Conversion Formula").Filterable(true).SetWidth(20);
               columns.Add(b => b.ConversionUnit).Titled("Conversion Unit").Filterable(true).SetWidth(20);
               columns.Add().RenderValueAs(b => b.Type == 1 ? "Medical" : b.Type == 2 ? "FMCG" : "N/A").Titled("Type").SetWidth(10);
               columns.Add().Encoded(false).Sanitized(false).Titled("Action").Filterable(false).SetWidth(20).RenderValueAs(b => @<div>
    <a href="~/MeasurementUnit/Edit?code=@ShopNow.Helpers.AdminHelpers.ECode(b.Code)" class="btn btn-warning text-center btn-sm text-nowrap" style="padding: 3px 26px">Edit</a>
    <a href="~/MeasurementUnit/Delete?code=@ShopNow.Helpers.AdminHelpers.ECode(b.Code)" class="btn btn-danger text-center btn-sm text-nowrap" style="padding: 3px 18px">Delete</a>
</div>);
}).WithPaging(20).Sortable(true)

               </div>
            </div>

        </div>
    </div>
</div>

@section Scripts
{
    <script src="~/Scripts/exporttoexcel/jquery.table2excel.js"></script>
}