@model ShopNow.ViewModels.CartListViewModel
@{
    ViewBag.Title = "Cart Details";
}
<title>ShopNow | Cart Details</title>
<div class="container-fluid">
    <div class="row">
        <div class="col-md-6">
            <h5 class="text-dark" style="letter-spacing:1px">CART DETAILS</h5>
        </div>    
        <div class="col-md-6 text-right">
            <a href="~/Cart/Pending" class="ml-auto" target="_self"><span class="fa fa-bars"></span> New Order List</a>
        </div>
    </div>

    <div class="row bg-green-200">
        <div class="col-md-12">
            @Html.AntiForgeryToken()
            <div class="card">
                <div class="card-header">
                    <div class="row">
                        <div class="col-md-9">
                            <input type="hidden" name="Code" id="Code" value="@Model.Code" />
                            <input type="hidden" name="CustomerCode" id="CustomerCode" value="@Model.CustomerCode" />
                            <input type="hidden" name="OrderNo" id="OrderNo" value="@Model.OrderNo" />
                            <input type="hidden" name="CartStatus" id="CartStatus" value="@Model.CartStatus" />
                            <div class="row">
                                <div class="col-md-4">
                                    <label><span class="text-secondary font-weight-bold">Shop Name:</span><span class="font-weight-bold"> @Model.ShopName</span></label>
                                </div>
                                <div class="col-md-6">
                                    <label><span class="text-secondary font-weight-bold">Address:</span><span class="font-weight-bold"> @Model.DeliveryAddress</span></label>
                                </div>
                                <div class="col-md-2">
                                    <label><span class="text-secondary font-weight-bold">Phone Number:</span><span class="font-weight-bold"> @Model.PhoneNumber</span></label>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-3 text-right">
                            @if (Model.CartStatus == 2)
                            {
                                <button type="button" class="btn btn-sm btn-success mr-3" id="Accept">Accept</button>
                                <button type="button" class="btn btn-sm btn-danger" id="Cancel">Cancel</button>
                                <a href="~/Cart/PickupSlip?orderno=@Model.OrderNo&code=@Model.Code" class="btn btn-secondary btn-sm" style="padding: 3px 16px"><span><i class="fa fa-print mr-1" aria-hidden="true"></i></span> Pickup Slip</a>
                            }
                            else if (Model.CartStatus == 7)
                            {
                                <span class="text-danger">Cancelled</span>
                            }
                            else if (Model.CartStatus == 3)
                            {
                                <span class="text-success mr-3">Order is being Prepared</span>
                                <button type="button" class="btn btn-sm btn-success mr-3" id="Assign">Assign Delivery Boy</button>
                            }
                            else if (Model.CartStatus == 4 && Model.isAssign == 1 && Model.OnWork == 0)
                            {
                                <span class="text-success">Assigned for Delivery</span>
                                <a href="Cart/DeliveryBoyAccept?OrderNo=@Model.OrderNo&code=@Model.Code" class="btn btn-info mt-2">Delivery Boy Accept</a>
                            }
                            else if (Model.CartStatus == 4 && Model.isAssign == 1 && Model.OnWork == 1)
                            {
                                <span class="text-success">Waiting for Pickup</span>
                                <a href="Cart/DeliveryBoyPickup?OrderNo=@Model.OrderNo&code=@Model.Code" class="btn btn-info mt-2">Delivery Boy Pickup</a>
                            }
                            else if (Model.CartStatus == 5)
                            {
                                <span class="text-success">On the Way to Delivery</span>
                                <a href="Cart/MarkAsDelivered?OrderNo=@Model.OrderNo&code=@Model.Code" class="btn btn-info mt-2">Mark as Delivered</a>
                            }
                            else if (Model.CartStatus == 6)
                            {
                                <span class="text-success">Delivered</span>
                            }
                        </div>
                    </div>
                </div>
                <div class="card-body">
                    <table class="table table-striped table-hover table-borderless w-100" id="Cart-list">
                        <thead>
                            <tr>
                                <th class="font-weight-bold">No.</th>
                                <th class="font-weight-bold">Product Name</th>
                                <th class="font-weight-bold">Brand Name</th>
                                <th class="font-weight-bold">Category Name</th>
                                <th class="font-weight-bold">Qty</th>
                                <th class="font-weight-bold">Price</th>
                                <th class="font-weight-bold">Image</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model.List)
                            {
                                <tr>
                                    <td></td>
                                    @if (item.ProductName != null)
                                    {
                                        <td><a href="~/Product/Details?code=@ShopNow.Helpers.AdminHelpers.ECode(item.ProductCode)">@item.ProductName</a></td>}
                                    else
                                    {
                                        <td>N/A</td>}
                                    @if (item.BrandName != null)
                                    {
                                        <td>@item.BrandName</td>}
                                    else
                                    {
                                        <td>N/A</td>}
                                    @if (item.CategoryName != null)
                                    {
                                        <td>@item.CategoryName</td>}
                                    else
                                    {
                                        <td>N/A</td>}
                                    <td>
                                        @item.Qty
                                        @*<input type="number" class="form-control col-md-1" name="Qty" id="Qty" value="@item.Qty" min="1" />*@
                                    </td>
                                    <td>@item.Price</td>
                                    <td>
                                        <img src="@item.ImagePath" class="img-thumbnail" width="40" height="40" onerror="this.src='/Images/No Photo.png'" />
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
@section Scripts
{
    <script src="~/Scripts/sweetalert/sweetalert.min.js"></script>
    <link href="~/Content/sweetalert/sweetalert.css" rel="stylesheet" />
    <script>
        $(document).ready(function () {
            var t = $('#Cart-list').DataTable({
                "dom": "<'row'<'col-sm-6'f>>" +
                    "<'row'<'col-sm-5'i><'col-sm-3'l><'col-sm-4'p>>" +
                    "<'row'<'col-sm-12'tr>>",
                "bPaginate": false,
                "scrollY": 400,
                "paging": true,
                "lengthMenu": [[10, 20, 50, 100, -1], [10, 20, 50, 100, "ALL"]],
                "pageLength": 20,
                initComplete: function (settings, json) {
                    $('.index input').remove();
                    $('.action-btn input').remove();
                    $('.dataTables_filter input').appendTo('.data-search');
                    $('.dataTables_filter label').remove();
                    $('.data-search input').attr('placeholder', 'Quick Search');
                    $('.data-search input').addClass('form-control');
                    $('.data-search input').removeClass('form-control-sm');
                },
            });

            t.on('order.dt search.dt', function () {
                t.column(0, { search: 'applied', order: 'applied' }).nodes().each(function (cell, i) {
                    cell.innerHTML = i + 1;
                });
            }).draw();

            var orderNo = $("#OrderNo").val();
            var customerCode = $('#CustomerCode').val();
            $("#Accept").click(function () {
                $.getJSON("/Cart/Accept?orderNo=" + orderNo + "&customerCode=" + customerCode, function (data) {
                    if (data.message != null) {
                        swal({
                            title: data.message,
                            text: "",
                            type: "success"
                        }, function () {
                                window.location.href = "/Cart/List";
                        });
                    }
                });
            });
            $("#Cancel").click(function () {
                var orderNo = $("#OrderNo").val();
                var customerCode = $('#CustomerCode').val();
                var status = $('#CartStatus').val();
                $.getJSON("/Cart/Cancel?orderNo=" + orderNo + "&customerCode=" + customerCode + "&status=" + status, function (data) {
                    if (data.message != null) {
                        swal({
                            title: data.message,
                            text: "",
                            type: "error"
                        }, function () {
                            window.location.href = "/Cart/List";
                        });
                    }
                });
            });
            $("#Assign").click(function () {
                var code = $("#OrderNo").val();
                window.location.href = "/Cart/AssignDeliveryBoy?code=" + code;
            });
        });

    </script>

}

