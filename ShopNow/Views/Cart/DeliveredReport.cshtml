@model IEnumerable<ShopNow.ViewModels.CartReportViewModel.CartReportList>
@using GridMvc.Html
@{
    ViewBag.Title = "Delivered Report";
}
<title>ShopNow | @ViewBag.Title</title>

<link href="~/Content/Gridmvc.css" rel="stylesheet" />
<script src="~/Scripts/gridmvc.js"></script>

@using (Html.BeginForm("DeliveredReport", "Cart", FormMethod.Post, new { id = "DeliveredReportForm", role = "form", enctype = "multipart/form-data" }))
{
    <div class="container-fluid">
        <div class="row d-print-none my-3">
            <div class="col-md-4">
                <h5 class="text-success">@ViewBag.Title</h5>
            </div>
            <div class="col-md-3">
                <select name="ShopId" class="form-control" id="ShopId"></select>
                <input type="hidden" name="ShopName" id="ShopName" />
            </div>
            <div class="col-md-2">
                <input type="button" class="btn btn-info" id="Filter" value="Apply Filter"/> 
            </div>
            <div class="col-md-3 text-right">
                    <button id="btnPrint" class="btn btn-sm btn-secondary mr-2" value="Print"><i class="fa fa-print fa-lg" aria-hidden="true"></i></button>
                    <button id="btnExport" class="btn btn-sm btn-secondary" value="Export To Excel"><i class="fa fa-file-excel-o fa-lg" aria-hidden="true"></i></button>
                
            </div>
        </div>
        <div class="row">
            <div class="col-md-12">
                <div class="card">
                    <div class="card-body">
                        <h4 class="text-center d-none d-print-block">@ViewBag.Title</h4>
                        @Html.Grid(Model).Columns(columns =>
                        {
                            columns.Add(c => c.OrderNumber).Titled("OrderNo").Filterable(true).SetWidth(10);
                            columns.Add(c => c.ShopName).Titled("Shop Name").Filterable(true).SetWidth(15);
                            columns.Add(c => c.DeliveryAddress).Titled("Delivery Address").Filterable(true).SetWidth(15);
                            columns.Add(c => c.Amount).Titled("Amount").Filterable(true).SetWidth(15);
                            columns.Add().RenderValueAs(c => c.CartStatus == 6 ? "Delivered" : "N/A").Titled("Order Status").Filterable(true).SetWidth(10);
                            columns.Add(c => c.DateEncoded).Titled("Date").Filterable(true).SetWidth(10);
                        }).WithPaging(25).Sortable(true)
                    </div>
                </div>
            </div>
        </div>
    </div>
}

@section Scripts
{
    <script src="~/Scripts/select2/js/select2.js"></script>
    <link href="~/Scripts/select2/css/select2.css" rel="stylesheet" />
    <link href="~/Content/select2/select2.custom.css" rel="stylesheet" />
    <script src="~/Scripts/exporttoexcel/jquery.table2excel.js"></script>
    <script>
        $(document).ready(function () {

            $('#btnPrint').click(function () {
                $('.container-fluid *').removeClass('card');
                $('.container-fluid *').removeClass('card-body');
                //$('.dataTables_info').addClass('d-none');
                //$('.dataTables_paginate').addClass('d-none');
                window.print();
            });

            $("#btnExport").click(function () {
                $("table").table2excel({
                    name: "Worksheet Name",
                    filename: "DeliveredReport",
                    fileext: ".xls",
                    exclude_links: true,
                });
            });

            $('#ShopId').select2({
                placeholder: "Search Shop",
                ajax: {
                    url: "/Cart/GetShopSelect2",
                    width: '100%',
                    delay: 250,
                    dataType: 'json'
                }
            }).on('select2:select', function (e) {
                $('input[name="ShopName"]').val(e.params.data.text);
            });

            $("#Filter").click(function () {
                var shopid = $("#ShopId").val();
                window.location.href = "/Cart/DeliveredReport/?shopid=" + shopid;
            });

        });
    </script>
}
