            //        $('input:checkbox').each(function () {
            //            $(".Access").prop('checked', true);
            //            var IsAccess = true;
            //            $.getJSON("/AccessPolicy/AddSelectAllSession/", { CustomerId: customerId, CustomerName: customerName, IsAccess: IsAccess, }, function (data) {
