            //            var IsAccess = false;
            //            $.getJSON("/AccessPolicy/RemoveSelectAllSession/", { IsAccess: IsAccess, CustomerId: customerId, CustomerName: customerName }, function (data) {
            //            });
            //        });
            //    }
            //});

        });
    </script>
}
