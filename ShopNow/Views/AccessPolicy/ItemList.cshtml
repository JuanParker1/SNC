@model IEnumerable<ShopNow.Models.AccessPolicy>
@using GridMvc.Html
@{
    ViewBag.Title = "Access Policy List";
}
<title>ShopNow | Access Policy List</title>
<link href="~/Content/Gridmvc.css" rel="stylesheet" />
<script src="~/Scripts/gridmvc.js"></script>
<div class="container-fluid">
    <div class="row">
        <div class="col-md-6">
            <h5 class="" style="letter-spacing:1px">ACCESS POLICY LIST</h5>
        </div>
        <div class="col-md-6 text-right">
            <a href="~/AccessPolicy/Create" target="_self"><span class="fa fa-plus"></span> New Access Policy</a>
        </div>
    </div>
    @Html.Grid(Model).Columns(columns =>
    {
       columns.Add(p => p.PageName).Titled("Name").Filterable(true).SetWidth(20);
       columns.Add().Titled("Shop Name").RenderValueAs(p => p.ShopName != null ? p.ShopName : "N/A").Filterable(true).SetWidth(10);
       columns.Add().Titled("Staff Name").RenderValueAs(p => p.StaffName != null ? p.StaffName : "N/A").Filterable(true).SetWidth(10);
       columns.Add()
    .Encoded(false)
    .Sanitized(false)
    .RenderValueAs(o => Html.ActionLink("Edit", "Edit", new { Id = @ShopNow.Helpers.AdminHelpers.ECodeInt(o.Id) }, new { @class = "btn btn-vsm btn-warning mr-1", @style = "padding: 3px 26px" }).ToHtmlString()
                  + Html.ActionLink("Delete", "Delete", new { Id = @ShopNow.Helpers.AdminHelpers.ECodeInt(o.Id) }, new { @class = "btn  btn-vsm btn-danger", @style = "padding: 3px 18px" }).ToHtmlString()).Titled("Action").SetWidth(15);
    }).WithPaging(20).Sortable(true)
</div>