@model ShopNow.ViewModels.BrandOwnerLoginViewModel

@{
    ViewBag.Title = "BrandOwnerLogin";
    Layout = null;
}
<script type="text/javascript" src="/Scripts/jquery.min.js"></script>
<script src="~/Scripts/jquery.validate.min.js"></script>
<script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
<script src="~/Scripts/jquery.unobtrusive-ajax.js"></script>
<link href="~/Scripts/bootstrap-4.1.3-dist/css/bootstrap.min.css" rel="stylesheet" />
<link href="~/Scripts/fontawesome-free-5.12.0-web/css/all.css" rel="stylesheet" />
<!DOCTYPE html>
<html>
<head>
    <title>Login Page</title>
    <link rel="stylesheet" type="text/css" href="styles.css">
</head>
<body>
    <style>
        html, body {
            /*background-image: url('http://getwallpapers.com/wallpaper/full/a/5/d/544750.jpg');
            background-image: url("../Images/266872.jpg");
            background-image: url('../../Images/shopify-vs-magento-vs-prestashop-banner.jpg');
            http: //getwallpapers.com/wallpaper/full/e/0/7/266849.jpg#.XhxaVpm-Va4.link background-size: cover;
            background-repeat: no-repeat;
            height: 100%;
            font-family: 'Numans', sans-serif;
        }*/
            background-image: url('../../Images/BrandOwnerLogin.jpg');
            /*background-image: url('../../Images/free-mint-green-wallpapers.jpg');*/
            /*background-image: url('../../Images/green-login.jpg');*/
            /*background-image: url('../../Images/shopify-vs-magento-vs-prestashop-banner.jpg');*/
            /*background-image: url("../Images/266872.jpg");*/
            // Your Image URL min-height : 100%;
            min-width: 100%;
            background-size: 100% 100%;
            background-repeat: no-repeat;
            overflow-y: hidden;
            overflow-x: hidden;
        }

        .container {
            height: 100%;
            align-content: center;
        }

        .card {
            height: 270px;
            margin-top: auto;
            margin-bottom: auto;
            width: 400px;
            background-color: rgba(0,0,0,0.3) !important;
            /*background-color: rgba(0,0,0,0.5) !important;*/
        }

        .social_icon span {
            font-size: 60px;
            margin-left: 10px;
            color: #FFC312;
        }

            .social_icon span:hover {
                color: white;
                cursor: pointer;
            }

        .card-header h3 {
            color: white;
        }

        .social_icon {
            position: absolute;
            right: 20px;
            top: -45px;
        }

        .input-group-prepend span {
            width: 50px;
            background-color: #FFC312;
            color: black;
            border: 0 !important;
        }

        input:focus {
            outline: 0 0 0 0 !important;
            box-shadow: 0 0 0 0 !important;
        }

        .remember {
            color: white;
        }

            .remember input {
                width: 20px;
                height: 20px;
                margin-left: 15px;
                margin-right: 5px;
            }

        .login_btn {
            color: black;
            background-color: #FFC312;
            width: 100px;
        }

            .login_btn:hover {
                color: black;
                background-color: white;
            }

        .links {
            color: white;
        }

            .links a {
                margin-left: 4px;
            }
    </style>
    <div class="container">
        <div class="d-flex justify-content-center h-100">
            <div class="card">
                <div class="card-header">
                    <h3>Brand Owner Login</h3>
                </div>
                <div class="card-body">
                    @using (Html.BeginForm("Login", "BrandOwner", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
                    {
                        @Html.AntiForgeryToken()

                        <div class="input-group form-group">
                            <div class="input-group-prepend">
                                <span class="input-group-text"><i class="fas fa-phone fa-spin"></i></span>
                            </div>
                            <input type="text" class="form-control" placeholder="username" name="PhoneNumber" id="PhoneNumber">

                        </div>
                        <div class="input-group form-group">
                            <div class="input-group-prepend">
                                <span class="input-group-text"><i class="fas fa-key fa-spin"></i></span>
                            </div>
                            <input type="password" class="form-control" placeholder="password" name="Password" id="Password">
                        </div>
                        <div class="row align-items-center remember">
                            <input type="checkbox">Remember Me
                        </div>
                        <div class="form-group text-center">
                            <input type="submit" value="Login" class="btn login_btn form-control">
                        </div>
                    }
                </div>
                @*<div class="card-footer">
                        <div class="d-flex justify-content-center links">
                            Don't have an account?<a href="/BrandOwner/Register">Sign Up</a>
                        </div>
                        <div class="d-flex justify-content-center">
                            <a href="#">Forgot your password?</a>
                        </div>
                    </div>*@
            </div>
        </div>
    </div>
</body>
</html>
