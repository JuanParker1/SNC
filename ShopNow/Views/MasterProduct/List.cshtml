@model IEnumerable<ShopNow.Models.MasterProduct>
@using GridMvc.Html

@{ 
    ViewBag.Title = "MasterProduct List";
}
<title>ShopNow | Master Product List</title>
<link href="~/Content/Gridmvc.css" rel="stylesheet" />
<script src="~/Scripts/gridmvc.js"></script>

<div class="container-fluid">
    <div class="row">
        <div class="col-md-3">
            <h5 class="mt-1" style="letter-spacing:1px">MASTER FULL LIST</h5>
        </div>
        <div class="col-md-9 text-right">
            <a href="~/MasterProduct/Create" target="_self" class="ml-2"><span class="fa fa-plus"></span> New Dish</a>
            <a href="~/MasterProduct/FMCGCreate" target="_self" class="ml-2"><span class="fa fa-plus"></span> New FMCG</a>
            <a href="~/MasterProduct/MedicalCreate" target="_self" class="ml-2"><span class="fa fa-plus"></span> New Medicine</a>
            <a href="~/MasterProduct/ElectronicCreate" target="_self" class="ml-2"><span class="fa fa-plus"></span> New Electronics</a>
        </div>
    </div>
    @Html.Grid(Model).Columns(columns =>
{
    columns.Add(c => c.Name).Titled("Name").Filterable(true).SetWidth(20);
    columns.Add(c => c.CategoryName).Titled("Category Name").Filterable(true).SetWidth(10);
    columns.Add(c => c.BrandName).Titled("Brand Name").Filterable(true).SetWidth(20);
    columns.Add(c => c.ProductType).Titled("Item Type").Filterable(true).SetWidth(10);
    columns.Add()
    .Encoded(false)
    .Sanitized(false)
       .RenderValueAs(o => o.ProductType == "Product" ? (Html.ActionLink("Edit", "Edit", new { code = @ShopNow.Helpers.AdminHelpers.ECode(o.Code) }, new { @class = "btn btn-sm btn-warning mr-1", @style = "padding: 3px 26px" }).ToHtmlString()
       + Html.ActionLink("Delete", "Delete", new { code = @ShopNow.Helpers.AdminHelpers.ECode(o.Code) }, new { @class = "btn  btn-sm btn-danger", @style = "padding: 3px 18px" }).ToHtmlString()) :
       (o.ProductType == "Dish" ? Html.ActionLink("Edit", "Edit", new { code = @ShopNow.Helpers.AdminHelpers.ECode(o.Code) }, new { @class = "btn btn-sm btn-warning mr-1", @style = "padding: 3px 26px" }).ToHtmlString() :
       (o.ProductType == "FMCG" ? Html.ActionLink("Edit", "FMCGEdit", new { code = @ShopNow.Helpers.AdminHelpers.ECode(o.Code) }, new { @class = "btn btn-sm btn-warning mr-1", @style = "padding: 3px 26px" }).ToHtmlString() :
       (o.ProductType == "Medical" ? Html.ActionLink("Edit", "MedicalEdit", new { code = @ShopNow.Helpers.AdminHelpers.ECode(o.Code) }, new { @class = "btn btn-sm btn-warning mr-1", @style = "padding: 3px 26px" }).ToHtmlString() :
       Html.ActionLink("Edit", "ServiceEdit", new { code = @ShopNow.Helpers.AdminHelpers.ECode(o.Code) }, new { @class = "btn btn-sm btn-warning mr-1", @style = "padding: 3px 26px" }).ToHtmlString())))
       + Html.ActionLink("Delete", "Delete", new { code = @ShopNow.Helpers.AdminHelpers.ECode(o.Code) }, new { @class = "btn  btn-sm btn-danger", @style = "padding: 3px 18px" }).ToHtmlString()).Titled("Action").SetWidth(10);
}).WithPaging(20).Sortable(true)

</div>
