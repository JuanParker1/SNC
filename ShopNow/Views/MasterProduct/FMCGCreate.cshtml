@model ShopNow.ViewModels.MasterFMCGCreateViewModel
@{
    ViewBag.Title = "FMCG Create";
}
<title>ShopNow | FMCG Create</title>
<style>

    img {
        border: 1px solid #ddd;
        border-radius: 4px;
        padding: 5px;
        width: 150px;
    }

        img:hover {
            box-shadow: 0 0 2px 1px rgba(0, 140, 186, 0.5);
        }
</style>
<div class="container-fluid">
    <div class="row">
        <div class="col-md-9">
            <h5 class="mt-1 text-success" style="letter-spacing:1px">FMCG ENTRY</h5>
        </div>
        <div class="col-md-2 text-right">
            <a href="~/MasterProduct/FMCGList" target="_self"><span class="fa fa-list-ul"></span> FMCG List</a>
        </div>
        <div class="col-md-1">
            <a href="~/MasterProduct/List" target="_self"><span class="fa fa-list-ul"></span> Full List</a>
        </div>
    </div>
    <div class="row">
        <div class="col-md-12 mx-auto">
            @using (Html.BeginForm("FMCGCreate", "MasterProduct", FormMethod.Post, new { id = "FMCGCreateForm", enctype = "multipart/form-data" }))
            {
                <div class="card">
                    <div class="card-body">
                        @Html.AntiForgeryToken()
                        <div class="form-group row">
                            <div class="col-md-12">
                                <div class="form-group row">
                                    <div class="col-md-3">
                                        <label class="col-form-label"><strong class="text-secondary">FMCG Name</strong></label>
                                        <input id="Name" type="text" class="form-control" name="Name" />
                                    </div>
                                    <div class="col-md-3">
                                        <label class="col-form-label"><strong class="text-secondary">Nick Name</strong></label>
                                        <input id="NickName" type="text" class="form-control" name="NickName" />
                                    </div>
                                    <div class="col-md-3">
                                        <label class="col-form-label"><strong class="text-secondary">Brand Name</strong></label>
                                        <select name="BrandId" id="BrandId" class="form-control"></select>
                                        <input type="hidden" name="BrandName" id="BrandName" />
                                    </div>
                                    <div class="col-md-3">
                                        <label class="col-form-label"><strong class="text-secondary">ASIN / EAN</strong></label>
                                        <input id="ASIN" type="text" class="form-control" name="ASIN" />
                                    </div>
                                    <div class="col-md-3">
                                        <label class="col-form-label"><strong class="text-secondary">Category Name</strong></label>
                                        <select name="CategoryId" id="CategoryId" class="form-control"></select>
                                        <input type="hidden" name="CategoryName" id="CategoryName" />
                                    </div>
                                    <div class="col-md-3">
                                        <label class="col-form-label"><strong class="text-secondary">Sub Category I Name</strong></label>
                                        <select name="SubCategoryId" id="SubCategoryId" class="form-control"></select>
                                        <input type="hidden" name="SubCategoryName" id="SubCategoryName" />
                                    </div>
                                    <div class="col-md-3">
                                        <label class="col-form-label"><strong class="text-secondary">Sub Category II Name</strong></label>
                                        <select name="NextSubCategoryId" id="NextSubCategoryId" class="form-control"></select>
                                        <input type="hidden" name="NextSubCategoryName" id="NextSubCategoryName" />
                                    </div>
                                    <div class="col-md-3">
                                        <label class="col-form-label" for="GoogleTaxonomyCode"><strong class="text-secondary">Google Taxonomy Code</strong></label>
                                        <input id="GoogleTaxonomyCode" type="text" class="form-control" name="GoogleTaxonomyCode" />
                                    </div>
                                    <div class="col-md-3">
                                        <div class="form-group">
                                            <label class="col-form-label" for="Adscore"><strong class="text-secondary">Adscore</strong></label>
                                            <input id="Adscore" type="number" value="1" class="form-control" name="Adscore" min="1" />
                                        </div>
                                    </div>
                                    <div class="col-md-3">
                                        <label class="col-form-label" for="Price"><strong class="text-secondary">Price</strong></label>
                                        <input id="Price" type="number" class="form-control" name="Price" min="0" />
                                    </div>
                                    <div class="col-md-3">
                                        <label class="col-form-label" for="Weight"><strong class="text-secondary">Weight</strong></label>
                                        <input id="Weight" type="number" class="form-control" name="Weight" min="0" />
                                    </div>
                                    <div class="col-md-3">
                                        <label class="col-form-label" for="Weight"><strong class="text-secondary">Size LB</strong></label>
                                        <input id="SizeLB" type="text" class="form-control" name="SizeLB" min="0" />
                                    </div>
                                    <div class="col-md-3">
                                        <label class="col-form-label" for="MeasurementUnitId"><strong class="text-secondary">Measurement Unit Name</strong></label>
                                        <select name="MeasurementUnitId" class="form-control" id="MeasurementUnitId"></select>
                                        <input type="hidden" name="MeasurementUnitName" id="MeasurementUnitName" />
                                    </div>
                                    <div class="col-md-3">
                                        <label class="col-form-label" for="PackageId"><strong class="text-secondary">Package Name</strong></label>
                                        <select name="PackageId" class="form-control" id="PackageId"></select>
                                        <input type="hidden" name="PackageName" id="PackageName" />
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-6">
                                <div class="row">
                                    <div class="col-md-12  form-group">
                                        <label class="col-form-label" for="ShortDescription"><strong class="text-secondary">Short Description</strong></label>
                                        <input id="ShortDescription" type="text" class="form-control" name="ShortDescription" min="0" />
                                    </div>
                                    <div class="col-md-12 form-group">
                                        <label class="control-label"><strong class="text-secondary">Long Description</strong></label>
                                        <textarea class="form-control ckeditor h-50" id="LongDescription" name="LongDescription" maxlength="400"></textarea>
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="row">
                                    <div class="col-md-4 form-group">
                                        <label class="control-label text-secondary font-weight-bold ml-2">FMCG Image</label>
                                        <div class="row">
                                            <div class="col-md-12">
                                                <div class="img-upload-container ml-2">
                                                    <img class="img-container w-100 h-100" id="img-FMCGImage1" onerror="this.src='/Images/No Photo.png'" />
                                                    <input type="file" id="FMCGImage1" name="FMCGImage1" class="d-none" />
                                                    <label for="FMCGImage1" class="img-browse"><span class="fa fa-plus"></span> Select Image</label>
                                                    <input type="hidden" name="ImagePathLarge1" id="ImagePathLarge1" />
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-md-4 form-group">
                                        <label class="control-label text-secondary font-weight-bold ml-2">FMCG Image-2</label>
                                        <div class="row">
                                            <div class="col-md-12">
                                                <div class="img-upload-container ml-2">
                                                    <img class="img-container w-100 h-100" id="img-FMCGImage2" onerror="this.src='/Images/No Photo.png'" />
                                                    <input type="file" id="FMCGImage2" name="FMCGImage2" class="d-none" />
                                                    <label for="FMCGImage2" class="img-browse"><span class="fa fa-plus"></span> Select Image</label>
                                                    <input type="hidden" name="ImagePathLarge2" id="ImagePathLarge2" />
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-md-4 form-group">
                                        <label class="control-label text-secondary font-weight-bold ml-2">FMCG Image-3</label>
                                        <div class="row">
                                            <div class="col-md-12">
                                                <div class="img-upload-container ml-2">
                                                    <img class="img-container w-100 h-100" id="img-FMCGImage3" onerror="this.src='/Images/No Photo.png'" />
                                                    <input type="file" id="FMCGImage3" name="FMCGImage3" class="d-none" />
                                                    <label for="FMCGImage3" class="img-browse"><span class="fa fa-plus"></span> Select Image</label>
                                                    <input type="hidden" name="ImagePathLarge3" id="ImagePathLarge3" />
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-md-4 form-group">
                                        <label class="control-label text-secondary font-weight-bold ml-2">FMCG Image-4</label>
                                        <div class="row">
                                            <div class="col-md-12">
                                                <div class="img-upload-container ml-2">
                                                    <img class="img-container w-100 h-100" id="img-FMCGImage4" onerror="this.src='/Images/No Photo.png'" />
                                                    <input type="file" id="FMCGImage4" name="FMCGImage4" class="d-none" />
                                                    <label for="FMCGImage4" class="img-browse"><span class="fa fa-plus"></span> Select Image</label>
                                                    <input type="hidden" name="ImagePathLarge4" id="ImagePathLarge4" />
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-md-4 form-group">
                                        <label class="control-label text-secondary font-weight-bold ml-2">FMCG Image-5</label>
                                        <div class="row">
                                            <div class="col-md-12">
                                                <div class="img-upload-container ml-2">
                                                    <img class="img-container w-100 h-100" id="img-FMCGImage5" onerror="this.src='/Images/No Photo.png'" />
                                                    <input type="file" id="FMCGImage5" name="FMCGImage5" class="d-none" />
                                                    <label for="FMCGImage5" class="img-browse"><span class="fa fa-plus"></span> Select Image</label>
                                                    <input type="hidden" name="ImagePathLarge5" id="ImagePathLarge5" />
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="form-group row">
                            <div class="col-md-2 mx-auto">
                                <button type="button" class="btn btn-block btn-success Save" id="Create"><span class="glyphicon glyphicon-file"></span> Save</button>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>

@section Scripts
{
    <!--Select2-->
    <script src="~/Scripts/select2/js/select2.js"></script>
    <link href="~/Scripts/select2/css/select2.css" rel="stylesheet" />
    <link href="~/Content/select2/select2.custom.css" rel="stylesheet" />
    <!--Select2 End-->
    <script src="~/Scripts/ValidateRequiredFields.js"></script>
    <script src="~/Scripts/multiple-image-upload.js"></script>
    <link href="~/Content/multiple-image-upload.css" rel="stylesheet" />
    <script src="~/Scripts/ckeditor/ckeditor.js"></script>
    <script src="~/Scripts/sweetalert/sweetalert.min.js"></script>
    <link href="~/Content/sweetalert/sweetalert.css" rel="stylesheet" />

    <script>
        $(document).ready(function () {
            var errormsg = "@ViewBag.ErrorMessage";
            var msg = "@ViewBag.Message";
            if (errormsg != "") {
                swal("Notice!", errormsg, "warning")
            }
            if (msg != "") {
                swal("Success!", msg, "success")
            }
            $('#BrandId').select2({
                placeholder: "Search Brand",
                ajax: {
                    url: "/MasterProduct/GetFMCGBrandSelect2",
                    width: '100%',
                    delay: 250,
                    dataType: 'json'
                }
            }).on('select2:select', function (e) {
                $('input[name="BrandName"]').val(e.params.data.text);
            });
           
            $('#CategoryId').select2({
                placeholder: "Search Category",
                ajax: {
                    url: "/MasterProduct/GetCategorySelect2",
                    width: '100%',
                    delay: 250,
                    dataType: 'json'
                }
            }).on('select2:select', function (e) {
                $('input[name="CategoryName"]').val(e.params.data.text);
                setSubCategories();
                }).on('select2:unselect', function (e) {
                    $('input[name="CategoryName"]').val(e.params.data.text);
                    setSubCategories();
                });
            $('#SubCategoryId').select2({});
            $('#NextSubCategoryId').select2({});
            //$('#SubCategoryIds').select2({
            //    placeholder: "Search I Sub Category",
            //    ajax: {
            //        url: "/MasterProduct/GetSubCategorySelect2",
            //        width: '100%',
            //        delay: 250,
            //        dataType: 'json'
            //    }
            //}).on('select2:select', function (e) {
            //    $('input[name="SubCategoryName"]').val(e.params.data.text);
            //    setNextSubCategories();
            //    }).on('select2:unselect', function (e) {
            //        $('input[name="SubCategoryName"]').val(e.params.data.text);
            //        setNextSubCategories();
            //    });

            //$('#NextSubCategoryIds').select2({
            //    placeholder: "Search II Sub Category",
            //    ajax: {
            //        url: "/MasterProduct/GetNextSubCategorySelect2",
            //        width: '100%',
            //        delay: 250,
            //        dataType: 'json'
            //    }
            //}).on('select2:select', function (e) {
            //    $('input[name="NextSubCategoryName"]').val(e.params.data.text);
            //});

         
            $('#PackageId').select2({
                placeholder: "Search Package",
                ajax: {
                    url: "/MasterProduct/GetFMCGPackageSelect2",
                    width: '100%',
                    delay: 250,
                    dataType: 'json'
                }
            }).on('select2:select', function (e) {
                $('input[name="PackageName"]').val(e.params.data.text);
                });

            $('#MeasurementUnitId').select2({
                placeholder: "Search Unit",
                ajax: {
                    url: "/MasterProduct/GetFMCGMeasurementUnitSelect2",
                    width: '100%',
                    delay: 250,
                    dataType: 'json'
                }
            }).on('select2:select', function (e) {
                $('input[name="MeasurementUnitName"]').val(e.params.data.text);
            });

            $(".Save").click(function () {
                var isValidated = false;
                var requiredArr = [
                    'Name',
                    'Price'
                ];
                isValidated = ValidateEmptyRequiredFiels(requiredArr);

                if (isValidated) {
                    $('#FMCGCreateForm').submit();
                };
            });

            function readURLFMCGImage1(input) {
                if (input.files && input.files[0]) {
                    var reader = new FileReader();
                    reader.onload = function (e) {
                        $('#img-FMCGImage1').attr('src', e.target.result);
                    }
                    reader.readAsDataURL(input.files[0]);
                }
            }

            function readURLFMCGImage2(input) {
                if (input.files && input.files[0]) {
                    var reader = new FileReader();
                    reader.onload = function (e) {
                        $('#img-FMCGImage2').attr('src', e.target.result);
                    }
                    reader.readAsDataURL(input.files[0]);
                }
            }

            function readURLFMCGImage3(input) {
                if (input.files && input.files[0]) {
                    var reader = new FileReader();
                    reader.onload = function (e) {
                        $('#img-FMCGImage3').attr('src', e.target.result);
                    }
                    reader.readAsDataURL(input.files[0]);
                }
            }

            function readURLFMCGImage4(input) {
                if (input.files && input.files[0]) {
                    var reader = new FileReader();
                    reader.onload = function (e) {
                        $('#img-FMCGImage4').attr('src', e.target.result);
                    }
                    reader.readAsDataURL(input.files[0]);
                }
            }

            function readURLFMCGImage5(input) {
                if (input.files && input.files[0]) {
                    var reader = new FileReader();
                    reader.onload = function (e) {
                        $('#img-FMCGImage5').attr('src', e.target.result);
                    }
                    reader.readAsDataURL(input.files[0]);
                }
            }

            $("#FMCGImage1").change(function () {
                readURLFMCGImage1(this);
            });
            $("#FMCGImage2").change(function () {
                readURLFMCGImage2(this);
            });
            $("#FMCGImage3").change(function () {
                readURLFMCGImage3(this);
            });

            $("#FMCGImage4").change(function () {
                readURLFMCGImage4(this);
            });

            $("#FMCGImage5").change(function () {
                readURLFMCGImage5(this);
            });

        });
        function setSubCategories() {
            $('#SubCategoryId').val('').trigger('change');
            $('#NextSubCategoryId').val('').trigger('change');
            var category_selected_values = $("#CategoryId").val();
            $('#SubCategoryId').select2({
                placeholder: "Search Subcategory1",
                ajax: {
                    url: "/MasterProduct/GetSubCategorySelect2?categoryIds=" + category_selected_values,
                    width: '100%',
                    delay: 250,
                    dataType: 'json'
                }
            }).on('select2:select', function (e) {
                $('input[name="SubCategoryName"]').val(e.params.data.text);
                setNextSubCategories();
            }).on('select2:unselect', function (e) {
                $('input[name="SubCategoryName"]').val(e.params.data.text);
                setNextSubCategories();
            });
        }
        function setNextSubCategories() {
            $('#NextSubCategoryId').val('').trigger('change');
            var subcategory_selected_values = $("#SubCategoryId").val();
            $('#NextSubCategoryId').select2({
                placeholder: "Search Subcategory2",
                ajax: {
                    url: "/MasterProduct/GetNextSubCategorySelect2?subcategoryIds=" + subcategory_selected_values,
                    width: '100%',
                    delay: 250,
                    dataType: 'json'
                }
            }).on('select2:select', function (e) {
                $('input[name="NextSubCategoryName"]').val(e.params.data.text);
            });
        }
        
        
    </script>
}
