@model IEnumerable<ShopNow.Models.MasterProduct>
@using GridMvc.Html
@{
    ViewBag.Title = "Medical List";
}
<title>ShopNow | Medical List</title>
<link href="~/Content/Gridmvc.css" rel="stylesheet" />
<script src="~/Scripts/gridmvc.js"></script>

<div class="container-fluid">
    <div class="row">
        <div class="col-md-6">
            <h5 class="text-theme_dark" style="letter-spacing:1px">MEDICAL LIST</h5>
        </div>
        <div class="col-md-6 text-right">
            <a href="~/MasterProduct/MedicalCreate" target="_self"><span class="fa fa-plus"></span> New Medicine</a>
        </div>
    </div>

    @Html.Grid(Model).Columns(columns =>
{
    columns.Add(c => c.Name).Titled("Name").Filterable(true).SetWidth(20);
    columns.Add(c => c.DrugCompoundDetailName).Titled("Combination").Filterable(true).SetWidth(20);
    columns.Add(c => c.CategoryName).Titled("Category Name").Filterable(true).SetWidth(12);
    columns.Add(c => c.BrandName).Titled("Brand Name").Filterable(true).SetWidth(16);
    columns.Add(c => c.ProductTypeName).Titled("Item Type").Filterable(true).SetWidth(8);
    columns.Add()
    .Encoded(false)
    .Sanitized(false)
    .RenderValueAs(o => Html.ActionLink("Edit", "MedicalEdit", new { code = @ShopNow.Helpers.AdminHelpers.ECodeInt(o.Id) }, new { @class = "btn btn-sm btn-warning mr-1"}).ToHtmlString()
                   + Html.ActionLink("Delete", "MedicalDelete", new { code = @ShopNow.Helpers.AdminHelpers.ECodeInt(o.Id) }, new { @class = "btn  btn-sm btn-danger"}).ToHtmlString()).Titled("Action").SetWidth(13);
}).WithPaging(20).Sortable(true)
</div>
