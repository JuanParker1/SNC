                    dataType: 'json'
                }
            }).on('select2:select', function (e) {
                $('input[name="CategoryName"]').val(e.params.data.text);
            });

            function readURLProduct1(input) {
                if (input.files && input.files[0]) {
                    var reader = new FileReader();
                    reader.onload = function (e) {
                        $('#img-ElectronicImage1').attr('src', e.target.result);
                    }
                    reader.readAsDataURL(input.files[0]);
                }
            }
            $("#ElectronicImage1").change(function () {
                readURLProduct1(this);
                $("#btnRemove1").removeClass("d-none");
            });
            $('#btnRemove1').on('click', function () {
                $('#img-ElectronicImage1').attr('src', '');
                $(this).addClass("d-none");
            });

