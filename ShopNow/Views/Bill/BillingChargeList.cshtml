@*@model ShopNow.ViewModels.BillListViewModel*@
@model IEnumerable<ShopNow.ViewModels.BillListViewModel.BillList>
@using GridMvc.Html
@{
    ViewBag.Title = "Billing Charge Setting List";
}
<title>ShopNow | @ViewBag.Title</title>
<link href="~/Content/Gridmvc.css" rel="stylesheet" />
<script src="~/Scripts/gridmvc.js"></script>

<div class="container-fluid">
    <div class="row my-2">
        <div class="col-md-6">
            <h5 class="text-success">@ViewBag.Title</h5>
        </div>
        <div class="col-md-6 text-right">
            <a href="~/Bill/BillingCharge" target="_self"><span class="fa fa-plus"></span> Entry of Billing Charge Setting</a>
        </div>
        <div class="col-md-12">
            <div class="card shadow mt-3">
                <div class="card-body">
                    @Html.Grid(Model).Columns(columns =>
               {
               columns.Add(c => c.ShopName).Titled("Shop Name").Filterable(true).SetWidth(10);
               columns.Add(c => c.ConvenientCharge).Titled("Convenient Charge").Filterable(true).SetWidth(15);
               columns.Add(c => c.ItemTypeText).Titled("Packing Type").Filterable(true).SetWidth(10);
               columns.Add(c => c.PackingCharge).Titled("Packing Charge").Filterable(true).SetWidth(10);
               columns.Add()
               .Encoded(false)
               .Sanitized(false).Titled("Action").SetWidth(15)
               .RenderValueAs(o =>
                            //.RenderValueAs(o => Html.ActionLink("Edit", "BillingUpdate", new { code = @ShopNow.Helpers.AdminHelpers.ECodeInt(o.Id) }, new { @class = "btn btn-sm btn-warning mr-1", @style = "padding: 3px 26px" }).ToHtmlString()
                            //               + Html.ActionLink("Delete", "BillingDelete", new { code = @ShopNow.Helpers.AdminHelpers.ECodeInt(o.Id) }, new { @class = "btn  btn-sm btn-danger", @style = "padding: 3px 18px" }).ToHtmlString()).Titled("Action").SetWidth(15);
                            @<div>
                                <a href="~/Bill/BillingUpdate?Id=@ShopNow.Helpers.AdminHelpers.ECodeInt(o.Id)" class="text-info mr-5"><i class="fa fa-edit fa-lg"></i></a>
                                <a href="javascript:void(0)" data-id=@o.Id class="text-danger btnDelete"><i class="fa fa-trash fa-lg"></i></a>
                            </div>);
            }).WithPaging(20).Sortable(true)
                </div>
            </div>
        </div>
    </div>
</div>
@section Scripts
{
    <script src="~/Scripts/sweetalert/sweetalert.min.js"></script>
    <link href="~/Content/sweetalert/sweetalert.css" rel="stylesheet" />
    <script>
        $(document).ready(function () {
            $(".btnDelete").click(function () {
                var Id = $(this).attr('data-id');
                swal({
                    title: "Are you sure want to delete?",
                    text: "You will not be able to recover this file!",
                    type: "warning",
                    showCancelButton: true,
                    confirmButtonColor: "#DD6B55",
                    confirmButtonText: "Yes, Delete it!",
                    cancelButtonText: "No, cancel",
                    closeOnConfirm: false,
                    closeOnCancel: true
                },
                    function (isConfirm) {
                        if (isConfirm) {
                            $.getJSON("/Bill/BillingDelete", { Id: Id }, function (data) {
                                if (data == true) {
                                    window.location.reload();
                                }
                            });
                        }
                    }
                );
            });

        });
    </script>
}