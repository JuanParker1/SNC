@model ShopNow.ViewModels.DeliveryChargeCreateViewModel
@{
    ViewBag.Title = "Delivary Charge Setting";
}
<title>ShopNow | Delivary Charge Setting</title>

<div class="container-fluid">
    <div class="row">
        <div class="col-md-4">
            <h5 class="mt-1 text-success">@ViewBag.Title</h5>
        </div>
        <div class="col-md-8 text-right">
            <a href="~/Bill/DeliveryChargeList" target="_self"><span class="fa fa-bars ml-3"></span> Delivery Charge List</a>
        </div>
    </div>
    <div class="row">
        <div class="col-md-12">
            @using (Html.BeginForm("DeliveryCharge", "Bill", FormMethod.Post, new { id = "DeliveryForm" }))
            {
                @Html.AntiForgeryToken()
                <div class="card shadow mb-3">
                    <div class="card-body">
                        <div class="row">
                            <div class="col-md-12 mt-3">
                                <div class="row">
                                    <div class="col-md-2 text-center text-theme_dark">
                                        <h5>Delivery Mode</h5>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="form-check-inline mr-3">
                                            <label class="form-check-label">
                                                <input type="radio" class="form-check-input" name="Type" value="0" checked> General
                                            </label>
                                        </div>
                                        <div class="form-check-inline">
                                            <label class="form-check-label">
                                                <input type="radio" class="form-check-input" name="Type" value="1"> Special
                                            </label>
                                        </div>
                                    </div>
                                </div>
                                <div class="row mt-3">
                                    <div class="col-md-2 text-center text-theme_dark">
                                        <h6>Delivery Charge Type</h6>
                                    </div>
                                    <div class="col-md-8">
                                        <div class="form-check-inline mr-3">
                                            <label class="form-check-label">
                                                <input type="radio" class="form-check-input" name="TireType" value="1" checked> 1<sup>st</sup> Tier
                                            </label>
                                        </div>
                                        <div class="form-check-inline">
                                            <label class="form-check-label">
                                                <input type="radio" class="form-check-input" name="TireType" value="2"> 2<sup>nd</sup> Tier
                                            </label>
                                        </div>
                                        <div class="form-check-inline">
                                            <label class="form-check-label">
                                                <input type="radio" class="form-check-input" name="TireType" value="3"> 3<sup>rd</sup> Tier
                                            </label>
                                        </div>
                                    </div>
                                </div>
                                <div class="row mt-3">
                                    <div class="col-md-2 text-center text-theme_dark">
                                        <h6>Vehicle Type</h6>
                                    </div>
                                    <div class="col-md-8">
                                        <div class="form-check-inline mr-3">
                                            <label class="form-check-label">
                                                <input type="radio" class="form-check-input" name="VehicleType" value="1" checked> Bike
                                            </label>
                                        </div>
                                        <div class="form-check-inline">
                                            <label class="form-check-label">
                                                <input type="radio" class="form-check-input" name="VehicleType" value="2"> Carrier Bike
                                            </label>
                                        </div>
                                        <div class="form-check-inline">
                                            <label class="form-check-label">
                                                <input type="radio" class="form-check-input" name="VehicleType" value="3"> Auto
                                            </label>
                                        </div>
                                    </div>
                                </div>
                                <hr class="sn_theme-gradient" />
                            </div>
                        </div>
                        <div id="GeneralEntry">
                            <div class="row">
                                <h5 class="col-md-12 text-theme my-3">General Delivery Charge</h5>
                                <div class="col-md-12">
                                    <div class="form-group row">
                                        <div class="col-md-3 text-md-left">
                                            <strong class="text-secondary">Rate upto 5 Km. <span class="text-danger">*</span></strong>
                                        </div>
                                        <div class="col-md-2">
                                            <input type="number" name="ChargeUpto5Km" id="ChargeUpto5Km" class="form-control" min="25" value="25" />
                                        </div>
                                    </div>
                                    <div class="form-group row">
                                        <div class="col-md-3 text-md-left">
                                            <strong class="text-secondary">After 5 Km. (Rate per Km.) <span class="text-danger">*</span></strong>
                                        </div>
                                        <div class="col-md-2">
                                            <input type="number" name="ChargePerKm" id="ChargePerKm" class="form-control" min="5" value="5" />
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="d-none" id="SpecialEntry">
                            <div class="row">
                                <h5 class="col-md-12 text-theme my-3">Special Delivery Charge</h5>
                                <div class="col-md-12">
                                    <div class="form-group row">
                                        <div class="col-md-3 text-md-left">
                                            <strong class="text-secondary">Rate upto 5 Km. <span class="text-danger">*</span></strong>
                                        </div>
                                        <div class="col-md-2">
                                            <input type="number" name="ChargeUpto5Km1" id="ChargeUpto5Km1" class="form-control" min="30" value="30" />
                                        </div>
                                    </div>
                                    <div class="form-group row">
                                        <div class="col-md-3 text-md-left">
                                            <strong class="text-secondary">After 5 Km. (Rate per Km.) <span class="text-danger">*</span></strong>
                                        </div>
                                        <div class="col-md-2">
                                            <input type="number" name="ChargePerKm1" id="ChargePerKm1" class="form-control" min="10" value="10" />
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="form-group row">
                            <div class="col-md-2 my-2 mx-auto">
                                <button type="button" class="btn btn-block btn-success" id="Create"><span class="glyphicon glyphicon-file"></span> Save</button>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>
@section Scripts
{
<!--Select2-->
<script src="~/Scripts/select2/js/select2.js"></script>
<link href="~/Scripts/select2/css/select2.css" rel="stylesheet" />
<link href="~/Content/select2/select2.custom.css" rel="stylesheet" />
<!--Select2 End-->
<script src="~/Scripts/ValidateRequiredFields.js"></script>
<script src="~/Scripts/sweetalert/sweetalert.min.js"></script>
<link href="~/Content/sweetalert/sweetalert.css" rel="stylesheet" />
<script>
    $(document).ready(function () {
      var msg = "@ViewBag.Message";
        if (msg != "") {
            swal("Notice!", msg, "error")
            }
           
        $('input[type=radio][name=Type]').change(function () {
            if (this.value == '0') {
                $("#GeneralEntry").removeClass("d-none");
                $("#SpecialEntry").addClass("d-none");
            }
            else if (this.value == '1') {
                $("#GeneralEntry").addClass("d-none");
                $("#SpecialEntry").removeClass("d-none");
            }
        });

        $('#Create').on('click', function () {
            var generalChargeUpto5Km = $('#ChargeUpto5Km').val();
            var generalChargePerKm = $('#ChargePerKm').val();
            var specialChargeUpto5Km = $('#ChargeUpto5Km1').val();
            var specialChargePerKm = $('#ChargePerKm1').val();
            var type = $('input[name="Type"]:checked').val();
            var tiretype = $('input[name="TireType"]:checked').val();
            var vehicletype = $('input[name="VehicleType"]:checked').val();
            if (type == '0') {
                if (generalChargeUpto5Km == null || generalChargePerKm == null || generalChargeUpto5Km == "" || generalChargePerKm == "") {
                    swal("Notice!", "Please Enter General Delivery Charge Amount!", "warning");
                } else if (generalChargeUpto5Km < 25) {
                    swal("Notice!", "General Delivery Charge within 5KM is Minimum Rs.25", "warning");
                } else if (generalChargePerKm < 4) {
                    swal("Notice!", "General Delivery Charge After 5KM per KM is Minimum Rs.4", "warning");
                }
                else {
                    $.getJSON("/Bill/DeliveryChargeExist?tiretype=" + tiretype + "&vehicletype=" + vehicletype, function (data) {
                        if (data.IsAdded == true) {
                            $('#DeliveryForm').submit();
                        } else {
                            swal(data.message, "", "warning");
                        }
                    });
                }
            } else if (type == '1') {
                if (specialChargeUpto5Km == null || specialChargePerKm == null || specialChargeUpto5Km == "" || specialChargePerKm == "") {
                    swal("Notice!", "Please Enter Special Delivery Charge Amount!", "warning");
                } else if (specialChargeUpto5Km < 30) {
                    swal("Notice!", "Special Delivery Charge within 5KM is Minimum Rs.30", "warning");
                } else if (specialChargePerKm < 10) {
                    swal("Notice!", "Special Delivery Charge After 5KM per KM is Minimum Rs.10", "warning");
                }
                else {
                    $.getJSON("/Bill/DeliveryChargeExist?tiretype=" + tiretype + "&vehicletype=" + vehicletype, function (data) {
                        if (data.IsAdded == true) {
                            $('#DeliveryForm').submit();
                        } else {
                            swal(data.message, "", "warning");
                        }
                    });
                }
            }
        });
        
    });
</script>
}
