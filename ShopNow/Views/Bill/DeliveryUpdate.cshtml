@model ShopNow.ViewModels.DeliveryChargeEditViewModel
@{
    ViewBag.Title = "Delivery Charge Setting";
}
<title>SNOWCH | Delivery Charge Setting</title>
<div class="container-fluid my-4">
    <div class="row">
        <div class="col-md-4">
            <h5 class="mt-1 text-success">@ViewBag.Title</h5>
        </div>
        <div class="col-md-8 text-right">
            <a href="~/Bill/DeliveryChargeList" target="_self"><span class="fa fa-bars ml-3"></span> Delivery Charge List</a>
        </div>
    </div>
    <div class="row">
        <div class="col-md-12">
            @using (Html.BeginForm("DeliveryUpdate", "Bill", FormMethod.Post, new { id = "DeliveryForm" }))
            {
                @Html.AntiForgeryToken()
                <input type="hidden" name="Id" value="@Model.Id" />
                <input type="hidden" name="Type" id="Type" value="@Model.Type" />
                <input type="hidden" name="TireType" id="TireType" value="@Model.TireType" />
                <input type="hidden" name="VehicleType" id="VehicleType" value="@Model.VehicleType" />
                <div class="card mb-3">
                    <div class="card-body">
                        <div class="row">
                            <div class="col-md-12 mt-3">
                                <div class="row">
                                    <div class="col-md-2 text-center text-theme_dark">
                                        <h5>Delivery Mode</h5>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="form-check-inline mr-3">
                                            <label class="form-check-label">
                                                <input type="radio" class="form-check-input" name="TypeRadio" value="0" disabled> General
                                            </label>
                                        </div>
                                        <div class="form-check-inline">
                                            <label class="form-check-label">
                                                <input type="radio" class="form-check-input" name="TypeRadio" value="1" disabled> Special
                                            </label>
                                        </div>
                                    </div>
                                </div>
                                <div class="row mt-3">
                                    <div class="col-md-2 text-center text-theme_dark">
                                        <h6>Delivery Charge Type</h6>
                                    </div>
                                    <div class="col-md-8">
                                        @if (Model.TireType == 1)
                                        {
                                            <label> 1<sup>st</sup> Tier</label>}
                                        @if (Model.TireType == 2)
                                        {
                                            <label> 2<sup>nd</sup> Tier</label>}
                                        @if (Model.TireType == 3)
                                        {
                                            <label> 3<sup>rd</sup> Tier</label>}
                                    </div>
                                </div>
                                <div class="row mt-3">
                                    <div class="col-md-2 text-center text-theme_dark">
                                        <h6>Vehicle Type</h6>
                                    </div>
                                    <div class="col-md-8">
                                        @if (Model.VehicleType == 1)
                                        {
                                            <label>Bike</label>}
                                        @if (Model.VehicleType == 2)
                                        {
                                            <label> Carrier Bike</label>}
                                        @if (Model.VehicleType == 3)
                                        {
                                            <label> Auto</label>}
                                    </div>
                                </div>
                                <hr class="sn_theme-gradient" />
                            </div>
                        </div>
                        <div id="GeneralEntry">
                            <div class="row">
                                <h5 class="col-md-12 text-theme my-3">General Delivery Charge</h5>
                                <div class="col-md-12">
                                    <div class="form-group row">
                                        <div class="col-md-3 text-md-left">
                                            <strong class="text-secondary">Rate upto 5 Km. <span class="text-danger">*</span></strong>
                                        </div>
                                        <div class="col-md-2">
                                            <input type="number" name="ChargeUpto5Km" id="ChargeUpto5Km" class="form-control" value="@Model.ChargeUpto5Km" min="25" />
                                        </div>
                                    </div>
                                    <div class="form-group row">
                                        <div class="col-md-3 text-md-left">
                                            <strong class="text-secondary">After 5 Km. (Rate per Km.) <span class="text-danger">*</span></strong>
                                        </div>
                                        <div class="col-md-2">
                                            <input type="number" name="ChargePerKm" id="ChargePerKm" class="form-control" value="@Model.ChargePerKm" min="5" />
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="d-none" id="SpecialEntry">
                            <div class="row">
                                <h5 class="col-md-12 text-theme my-3">Special Delivery Charge</h5>
                                <div class="col-md-12">
                                    <div class="form-group row">
                                        <div class="col-md-3 text-md-left">
                                            <strong class="text-secondary">Rate upto 5 Km. <span class="text-danger">*</span></strong>
                                        </div>
                                        <div class="col-md-2">
                                            <input type="number" name="ChargeUpto5Km1" id="ChargeUpto5Km1" class="form-control" value="@Model.ChargeUpto5Km1" min="30" />
                                        </div>
                                    </div>
                                    <div class="form-group row">
                                        <div class="col-md-3 text-md-left">
                                            <strong class="text-secondary">After 5 Km. (Rate per Km.) <span class="text-danger">*</span></strong>
                                        </div>
                                        <div class="col-md-2">
                                            <input type="number" name="ChargePerKm1" id="ChargePerKm1" class="form-control" value="@Model.ChargePerKm1" min="10" />
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="form-group row">
                            <div class="col-md-2 my-2 mx-auto">
                                <button type="button" class="btn btn-block btn-success" id="Edit"><span class="glyphicon glyphicon-file"></span> Update</button>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>

@section Scripts
{
    <!--Select2-->
    <script src="~/Scripts/select2/js/select2.js"></script>
    <link href="~/Scripts/select2/css/select2.css" rel="stylesheet" />
    <link href="~/Content/select2/select2.custom.css" rel="stylesheet" />
    <!--Select2 End-->
    <script src="~/Scripts/ValidateRequiredFields.js"></script>
    <script src="~/Scripts/sweetalert/sweetalert.min.js"></script>
    <link href="~/Content/sweetalert/sweetalert.css" rel="stylesheet" />
    <script>
        $(document).ready(function () {
            jQuery(document).ready(function ($) {
                var drs = $("#Type").val();
                $("input[name=TypeRadio][value=" + drs + "]").attr('checked', 'checked');
                if (drs == 0) {
                    $("#GeneralEntry").removeClass("d-none");
                    $("#SpecialEntry").addClass("d-none");
                } else {
                    $("#GeneralEntry").addClass("d-none");
                    $("#SpecialEntry").removeClass("d-none");
                }
            });

            $('#Edit').on('click', function () {
                var generalChargeUpto5Km = $('#ChargeUpto5Km').val();
                var generalChargePerKm = $('#ChargePerKm').val();
                var specialChargeUpto5Km = $('#ChargeUpto5Km1').val();
                var specialChargePerKm = $('#ChargePerKm1').val();
                var type = $("#Type").val();

                if (type == 0) {
                    if (generalChargeUpto5Km == null || generalChargePerKm == null || generalChargeUpto5Km == "" || generalChargePerKm == "") {
                        swal("Notice!", "Please Enter General Delivery Charge Amount!", "warning");
                    }
                    else {
                        $('#DeliveryForm').submit();
                    }
                } else if (type == 1) {
                    if (specialChargeUpto5Km == null || specialChargePerKm == null || specialChargeUpto5Km == "" || specialChargePerKm == "") {
                        swal("Notice!", "Please Enter Special Delivery Charge Amount!", "warning");
                    }
                    else {
                        $('#DeliveryForm').submit();
                    }
                }
            }) ;            
        });
    </script>
}
