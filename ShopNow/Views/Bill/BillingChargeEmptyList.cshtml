@model IEnumerable<ShopNow.ViewModels.BillingChargeEmptyListViewModel.EmptyBillList>
@using GridMvc.Html
@{
    ViewBag.Title = "Billing Charge Empty List";
}
<title>ShopNow | @ViewBag.Title</title>
<link href="~/Content/Gridmvc.css" rel="stylesheet" />
<script src="~/Scripts/gridmvc.js"></script>

<div class="container-fluid">
    <div class="row my-2">
        <div class="col-md-6">
            <h5 class="text-success">@ViewBag.Title</h5>
        </div>
        <div class="col-md-6 text-right">
            <a href="~/Bill/BillingCharge" target="_self"><span class="fa fa-plus"></span> Entry of Billing Charge Setting</a>
        </div>
        <div class="col-md-12">
            <div class="card shadow mt-3">
                <div class="card-body">
                    @Html.Grid(Model).Columns(columns =>
               {
               columns.Add(c => c.ShopName).Titled("Shop Name").Filterable(true).SetWidth(50);
                     columns.Add().Encoded(false).Sanitized(false).Titled("Action").SetWidth(15)
               .RenderValueAs(o => @<div>
                        <a href="~/Bill/BillingCharge?shopid=@o.ShopId&shopname=@o.ShopName" class="btn btn-sm btn-success">Add Billing Charge</a>
                    </div>);
}).WithPaging(20).Sortable(true)
                </div>
            </div>
        </div>
    </div>
</div>
