@model ShopNow.ViewModels.ShopEditViewModel
@{
    ViewBag.Title = "Shop Details";
}
<title>ShopNow | Shop Details</title>
<div class="container my-0">
    <div class="row">
        <div class="col-md-8">
            <h4 class="text-success">Shop Details</h4>
        </div>
        <div class="col-md-4 text-right">
            <a href="~/Shop/List" target="_blank"><span class="fa fa-bars"></span>&nbsp;Shop List</a>
        </div>
    </div>
    <div class="row">
        <div class="col-md-12 mx-auto">
            <div class="card shadow">
                <div class="card-body">
                    <div class="card border-0 mb-4">
                        <div class="card-body row">
                            <div class="col-md-12 row">
                                <div class="col-md-2 mx-auto">
                                    <a href="~/Shop/ImageProtected" data-toggle="modal" data-target="#myModalShopImage" title="Click Here To Preview!">
                                        <img src="https://s3.ap-south-1.amazonaws.com/shopnowchat.com/Medium/@Model.ImagePath" class="img-thumbnail ShopImage" width="150" height="150" onerror="this.src='/Images/noimage.png'" />
                                    </a>
                                </div>
                                <div class="col-md-10 mx-auto">
                                    <div></div>
                                    <h2 class="text-center text-capitalize">
                                        @if (Model.Name != null)
                                        {<span class="text-warning">@Model.Name</span>}
                                    </h2>
                                    <h5 class="text-center text-secondary">
                                        @if (Model.Address != null)
                                        {<span>@Model.Address</span>}
                                    </h5>
                                    <h6 class="text-center text-secondary">
                                        <span>
                                            <label>
                                                @if (Model.PhoneNumber != null)
                                                {<span>@Model.PhoneNumber</span>}
                                            </label>
                                        </span>
                                        <span class="font-weight-bold"> &nbsp;  &nbsp;</span>
                                        <span>
                                            <label>
                                                @if (Model.OfficialEmail != null)
                                                {<span>@Model.OfficialEmail</span>}
                                            </label>
                                        </span>
                                        <span class="font-weight-bold"> &nbsp;  &nbsp;</span>
                                        <span>
                                            <label>
                                                @if (Model.Website != null)
                                                {<a href="" target="_blank">@Model.Website</a>}
                                            </label>
                                        </span>
                                    </h6>
                                </div>
                            </div>
                            <div class="col-md-12"><hr style="height:3px;border-width:0;color:deepskyblue;background-color:deepskyblue"></div>
                            <div class="col-md-12">
                                <div class="form-group row">
                                    <div class="col-md-1"></div>
                                    <div class="col-md-2">
                                        <label class="col-form-label"><strong class="text-secondary">Shop Type</strong></label>
                                    </div>
                                    <div class="col-md-2 mt-2">
                                        <label>
                                            @if (Model.ShopCategoryName != null)
                                            {<span>@Model.ShopCategoryName</span>}
                                        else
                                        {<span class="text-warning">Not Specified</span>}
                                        </label>
                                    </div>
                                    <div class="col-md-1"></div>
                                    <div class="col-md-2 text-right">
                                        <label class="col-form-label"><strong class="text-secondary">Logo Image</strong></label>
                                    </div>
                                    <div class="col-md-3">
                                        <a href="~/Shop/ImageProtected" data-toggle="modal" data-target="#myModalLogoImage" title="Click Here To Preview!">
                                            <img src="https://s3.ap-south-1.amazonaws.com/shopnowchat.com/Medium/@Model.ImageLogoPath" class="img-thumbnail LogoImage" width="100" height="100" onerror="this.src='/Images/noimage.png'" />
                                        </a>
                                    </div>
                                    <div class="col-md-1"></div>
                                </div>
                                <hr class="text-secondary" />
                                <div class="form-group row mt-3">
                                    <h5 class="col-md-12 text-success">Proprietor Details</h5>
                                    <div class="col-md-8 mt-3">
                                        <div class="form-group row">
                                            <div class="col-md-6">
                                                <label class=""><strong class="text-secondary">Name</strong></label>
                                            </div>
                                            <div class="col-md-6">
                                                <label>
                                                    @if (Model.AadharName != null)
                                                    {<span>@Model.AadharName</span>}
                                                else
                                                {<span>N/A</span>}
                                                </label>
                                            </div>
                                            <div class="col-md-6">
                                                <label class=""><strong class="text-secondary">Mobile Number</strong></label>
                                            </div>
                                            <div class="col-md-6">
                                                <label>
                                                    @if (Model.OwnerPhoneNumber != null)
                                                    {<span>@Model.OwnerPhoneNumber</span>}
                                                else
                                                {<span>N/A</span>}
                                                </label>
                                            </div>
                                            <div class="col-md-6">
                                                <label class=""><strong class="text-secondary">Email</strong></label>
                                            </div>
                                            <div class="col-md-6">
                                                <label>
                                                    @if (Model.Email != null)
                                                    {<span>@Model.Email</span>}
                                                else
                                                {<span>N/A</span>}
                                                </label>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-md-4 text-center">
                                        <div class="card border-info bg-muted">
                                            <div class="card-body">
                                                <label class="col-md-12"><strong class="text-secondary"><i>Aadhar Image</i></strong></label>
