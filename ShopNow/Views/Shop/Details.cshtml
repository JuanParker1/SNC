                                            <label>
                                                @if (Model.AccountName != null)
                                                {<span>@Model.AccountName</span>}
                                            else
                                            {<span>N/A</span>}
                                            </label>
                                        </div>
                                    </div>
                                    <div class="form-group row">
                                        <div class="col-md-6">
                                            <small class="control-label col-sm-12" for="AccountNumber"><i class="text-secondary">Account Number</i></small>
                                            <label>
                                                @if (Model.AccountNumber != null)
                                                {<span>@Model.AccountNumber</span>}
                                            else
                                            {<span>N/A</span>}
                                            </label>
                                        </div>
                                        <div class="col-md-6">
                                            <small class="control-label col-sm-12" for="IfscCode"><i class="text-secondary">IFSC Code</i></small>
                                            <label>
                                                @if (Model.IFSCCode != null)
                                                {<span>@Model.IFSCCode</span>}
                                            else
                                            {<span>N/A</span>}
                                            </label>
                                        </div>
                                    </div>
                                    <div class="form-group row">
                                        <div class="col-md-6">
                                            <small class="control-label col-sm-12" for="SwiftCode"><i class="text-secondary">SWIFT Code</i></small>
                                            <label>
                                                @if (Model.SwiftCode != null)
                                                {<span>@Model.SwiftCode</span>}
                                            else
                                            {<span>N/A</span>}
                                            </label>
                                        </div>
                                        <div class="col-md-6">
                                            <small class="control-label col-sm-12" for="UPIID"><i class="text-secondary">UPI ID</i></small>
                                            <label>
                                                @if (Model.UPIID != null)
                                                {<span>@Model.UPIID</span>}
                                            else
                                            {<span>N/A</span>}
                                            </label>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-md-4">
                                    <div class="card-columns form-group row col-md-12">
                                        <div class="card border-info bg-muted">
                                            <div class="card-body text-center">
                                                <label class="col-md-12 text-center"><strong class="text-secondary">Passbook</strong></label>
                                                <a href="~/Shop/ImageProtected" data-toggle="modal" data-target="#myModalBankPassbook" title="Click Here To Preview!">
                                                    <img src="https://s3.ap-south-1.amazonaws.com/shopnowchat.com/Medium/@Model.ImageAccountPath" class="img-thumbnail BankPassbookImage mb-2" width="100" height="100" onerror="this.src='/Images/noimage.png'" />
                                                </a>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

