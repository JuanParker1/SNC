                <footer class="block py-4">
                    <div class="col-md-12 mx-auto">
                        <p class="text-center font-weight-light small">&copy; Copyright 2020. All Rights Reserved.<br /> Designed by Snowch</p>
                    </div>
                </footer>
            </div>
        </div>
    </div>
    <script>
        $(document).ready(function () {
              $('select[name="MonthFilter"] option[value=@Model.MonthFilter]').prop('selected', true);
            $('select[name="YearFilter"] option[value=@Model.YearFilter]').prop('selected', true);

            var exampleBarChartData = {
                "datasets": {
                    "values":[@Model.OrderJanCount,@Model.OrderFebCount,@Model.OrderMarCount,@Model.OrderAprCount,@Model.OrderMayCount,@Model.OrderJunCount,@Model.OrderJulCount,@Model.OrderAugCount,@Model.OrderSepCount,@Model.OrderOctCount,@Model.OrderNovCount,@Model.OrderDecCount], /*[100, 200, 150, 300, 450, 500, 350, 600, 400, 250, 300, 650],*/
                    "labels": [
                        "January- @Model.OrderJanCount",
                        "February- @Model.OrderFebCount",
                        "March- @Model.OrderMarCount",
                        "April- @Model.OrderAprCount",
                        "May- @Model.OrderMayCount",
                        "June- @Model.OrderJunCount",
                        "July- @Model.OrderJulCount",
                        "August- @Model.OrderAugCount",
                        "September- @Model.OrderSepCount",
                        "October- @Model.OrderOctCount",
                        "November- @Model.OrderNovCount",
                        "December- @Model.OrderDecCount"
                    ],
                        "color": "green"
        },
            "height": "400px",
            "width": "1500px",
            //"background": "#FFFFFF",
            "shadowDepth": "0",

            };
        MaterialCharts.bar("#bar-chart-example", exampleBarChartData);
            $('#bar-chart-example .material-charts-box-chart-vertical-tick-label').each(function () {
                var value = Math.ceil($(this).html());
                $(this).html(value);
            });

            var shopcategoryBarChartData = {
                "datasets": {
                    "values":[@Model.OrderMedicalCount,@Model.OrderRestaurantCount,@Model.OrderMeatAndVegCount,@Model.OrderSupermarketCount],
                    "labels": [
                        "Medical",
                        "Restaurant",
                        "Meat & Vegetables",
                        "Supermarket"
                    ],
                        "color": "green"
        },
            "height": "400px",
            "width": "650px",
            //"background": "#FFFFFF",
            "shadowDepth": "0",

            };
            MaterialCharts.bar("#bar-chart-shop-category", shopcategoryBarChartData);
            $('#bar-chart-shop-category .material-charts-box-chart-vertical-tick-label').each(function () {
                var value = Math.ceil($(this).html());
                $(this).html(value);
            });

              var last5DaysBarChartData = {
                "datasets": {
                    "values":[@Model.Order5thDay,@Model.Order4thDayCount,@Model.Order3rdDayCount,@Model.Order2ndDayCount,@Model.OrderTodayCount],
                    "labels": [
                        "@DateTime.Now.AddDays(-4).ToString("dd-MMM-yyyy")",
                        "@DateTime.Now.AddDays(-3).ToString("dd-MMM-yyyy")",
                         "@DateTime.Now.AddDays(-2).ToString("dd-MMM-yyyy")",
                        "@DateTime.Now.AddDays(-1).ToString("dd-MMM-yyyy")",
                          "@DateTime.Now.ToString("dd-MMM-yyyy")",
                    ],
                        "color": "green"
        },
            "height": "400px",
            "width": "650px",
            //"background": "#FFFFFF",
            "shadowDepth": "0",

            };
            MaterialCharts.bar("#bar-chart-last-5days", last5DaysBarChartData);
            $('#bar-chart-last-5days .material-charts-box-chart-vertical-tick-label').each(function () {
                var value = Math.ceil($(this).html());
                $(this).html(value);
            });
    });
    </script>
</body>

